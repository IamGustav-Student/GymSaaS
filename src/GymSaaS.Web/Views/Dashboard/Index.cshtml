@using System.Globalization
@model GymSaaS.Application.Dashboard.Queries.GetDashboardStats.DashboardStatsDto

@{
    ViewData["Title"] = "Panel de Control";
    Layout = "~/Views/Shared/_LayoutMD3.cshtml";
}

<div class="glass-panel mb-5 p-5 position-relative overflow-hidden">
    <div style="position: absolute; top: -50%; right: -10%; width: 600px; height: 600px; background: radial-gradient(circle, rgba(0, 243, 255, 0.1) 0%, transparent 70%); pointer-events: none;"></div>

    <div class="position-relative z-1">
        <h1 class="display-4 brand-font text-white mb-2" style="text-shadow: 0 0 15px rgba(255,255,255,0.3);">Hola, Coach.</h1>
        <p class="fs-5 text-secondary mb-4">Aquí tienes el rendimiento de tu gimnasio hoy.</p>

        <div class="d-flex flex-wrap gap-3">
            <a asp-controller="Accesos" asp-action="Index" class="btn-md3 btn-md3-primary">
                <i class="bi bi-eye-fill"></i> Monitor de Entrada
            </a>
            <a asp-controller="Membresias" asp-action="Asignar" class="btn-md3" style="border: 1px solid rgba(255,255,255,0.2); color: #fff;">
                <i class="bi bi-cart-plus-fill text-info"></i> Venta Rápida
            </a>
            <a asp-controller="Ejercicios" asp-action="Index" class="btn-md3" style="border: 1px solid rgba(255,255,255,0.2); color: #fff;">
                <i class="bi bi-collection-play-fill text-warning"></i> Catálogo
            </a>
        </div>
    </div>
</div>

<div class="row g-4">

    <div class="col-md-6 col-lg-3">
        <div class="glass-panel h-100 position-relative overflow-hidden d-flex flex-column justify-content-center p-4">
            <div style="position: absolute; right: -20px; top: -20px; width: 100px; height: 100px; background: var(--md-sys-color-tertiary); filter: blur(60px); opacity: 0.2;"></div>

            <div class="d-flex align-items-center mb-2">
                <i class="bi bi-currency-dollar text-success fs-4 me-2"></i>
                <small class="text-uppercase fw-bold text-secondary brand-font" style="font-size: 0.7rem;">Ingresos (Mes)</small>
            </div>
            <h2 class="display-6 fw-bold text-white mb-0 brand-font" style="text-shadow: 0 0 10px rgba(10, 255, 10, 0.3);">
                $ @Model.IngresosMensuales.ToString("N0", new CultureInfo("es-AR"))
            </h2>
        </div>
    </div>

    <div class="col-md-6 col-lg-3">
        <div class="glass-panel h-100 position-relative overflow-hidden d-flex flex-column justify-content-center p-4">
            <div style="position: absolute; right: -20px; top: -20px; width: 100px; height: 100px; background: var(--md-sys-color-primary); filter: blur(60px); opacity: 0.2;"></div>

            <div class="d-flex align-items-center mb-2">
                <i class="bi bi-people-fill text-info fs-4 me-2"></i>
                <small class="text-uppercase fw-bold text-secondary brand-font" style="font-size: 0.7rem;">Socios Activos</small>
            </div>
            <h2 class="display-6 fw-bold text-white mb-0 brand-font" style="text-shadow: 0 0 10px rgba(0, 243, 255, 0.3);">
                @Model.SociosActivos
            </h2>
        </div>
    </div>

    <div class="col-md-6 col-lg-3">
        <div class="glass-panel h-100 position-relative overflow-hidden d-flex flex-column justify-content-center p-4">
            <div style="position: absolute; right: -20px; top: -20px; width: 100px; height: 100px; background: var(--md-sys-color-secondary); filter: blur(60px); opacity: 0.2;"></div>

            <div class="d-flex align-items-center mb-2">
                <i class="bi bi-bag-check-fill text-warning fs-4 me-2"></i>
                <small class="text-uppercase fw-bold text-secondary brand-font" style="font-size: 0.7rem;">Ventas Nuevas</small>
            </div>
            <h2 class="display-6 fw-bold text-white mb-0 brand-font">
                @Model.NuevasMembresias
            </h2>
        </div>
    </div>

    <div class="col-md-6 col-lg-3">
        <div class="glass-panel h-100 position-relative overflow-hidden d-flex flex-column justify-content-center p-4">
            <div style="position: absolute; right: -20px; top: -20px; width: 100px; height: 100px; background: #ffa500; filter: blur(60px); opacity: 0.2;"></div>

            <div class="d-flex align-items-center mb-2">
                <i class="bi bi-qr-code text-white fs-4 me-2"></i>
                <small class="text-uppercase fw-bold text-secondary brand-font" style="font-size: 0.7rem;">Accesos Hoy</small>
            </div>
            <h2 class="display-6 fw-bold text-white mb-0 brand-font">
                @Model.AccesosHoy
            </h2>
        </div>
    </div>
</div>