@using System.Globalization
@model GymSaaS.Application.Dashboard.Queries.GetDashboardStats.DashboardStatsDto

@{
    ViewData["Title"] = "Panel de Control";
}

<!-- HERO BANNER INTERNO -->
<div class="p-5 mb-5 rounded-3 shadow position-relative overflow-hidden"
     style="background: linear-gradient(to right, #111, transparent), url('https://images.unsplash.com/photo-1571902943202-507ec2618e8f?auto=format&fit=crop&q=80') center; background-size: cover; border: 1px solid #333;">
    <div class="container-fluid py-2 position-relative" style="z-index: 2;">
        <h1 class="display-4 fw-bold text-white">Hola, Coach.</h1>
        <p class="fs-4 text-white-50">Aquí tienes el rendimiento de tu gimnasio hoy.</p>
        <div class="mt-4">
            <a asp-controller="Accesos" asp-action="Index" class="btn btn-primary btn-lg me-2">
                <i class="bi bi-eye-fill me-2"></i> Monitor de Entrada
            </a>
            <a asp-controller="Membresias" asp-action="Asignar" class="btn btn-outline-light btn-lg">
                <i class="bi bi-cart-plus me-2"></i> Venta Rápida
            </a>
        </div>
    </div>
</div>

<!-- KPIs -->
<div class="row g-4 mb-5">
    <div class="col-md-3">
        <div class="card h-100 border-start border-4 border-success">
            <div class="card-body">
                <small class="text-uppercase fw-bold text-muted">Ingresos (Mes)</small>
                <h2 class="display-6 fw-bold text-white mb-0 mt-2">
                    $ @Model.IngresosMensuales.ToString("N0", new CultureInfo("es-AR"))
                </h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100 border-start border-4 border-primary">
            <div class="card-body">
                <small class="text-uppercase fw-bold text-muted">Socios Activos</small>
                <h2 class="display-6 fw-bold text-white mb-0 mt-2">@Model.SociosActivos</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100 border-start border-4 border-info">
            <div class="card-body">
                <small class="text-uppercase fw-bold text-muted">Ventas Nuevas</small>
                <h2 class="display-6 fw-bold text-white mb-0 mt-2">@Model.NuevasMembresias</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100 border-start border-4 border-warning">
            <div class="card-body">
                <small class="text-uppercase fw-bold text-muted">Accesos Hoy</small>
                <h2 class="display-6 fw-bold text-white mb-0 mt-2">@Model.AccesosHoy</h2>
            </div>
        </div>
    </div>
</div>