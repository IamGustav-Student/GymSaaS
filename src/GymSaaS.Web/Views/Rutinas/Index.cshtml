@model IEnumerable<GymSaaS.Application.Rutinas.Queries.GetRutinas.RutinaDto>

@{
    
    Layout = "~/Views/Shared/_LayoutMD3.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="brand-font m-0 text-white">Planes de Entrenamiento</h2>
        <p class="text-secondary small mb-0">Asigna y supervisa las rutinas de tus socios</p>
    </div>
    <a asp-action="Create" class="btn-md3 btn-md3-primary">
        <i class="bi bi-plus-lg me-1"></i> Asignar Rutina
    </a>
</div>

<form asp-action="Index" method="get" class="mb-4">
    <div class="glass-panel p-2">
        <div class="input-group">
            <span class="input-group-text bg-dark border-secondary text-secondary">
                <i class="bi bi-search"></i>
            </span>
            <input type="text" name="busqueda"
                   class="form-control bg-dark border-secondary text-white"
                   placeholder="Buscar por nombre de alumno o rutina..."
                   value="@ViewData["BusquedaActual"]" autocomplete="off">

            <button class="btn btn-outline-info" type="submit">
                Buscar
            </button>

            @if (ViewData["BusquedaActual"] != null)
            {
                <a asp-action="Index" class="btn btn-outline-secondary" title="Limpiar filtro">
                    <i class="bi bi-x-lg"></i>
                </a>
            }
        </div>
    </div>
</form>

<div class="glass-panel">
    <div class="d-flex align-items-center mb-3 pb-2 border-bottom border-secondary border-opacity-25">
        <i class="bi bi-list-check text-info fs-5 me-2"></i>
        <span class="fw-bold text-uppercase text-white" style="letter-spacing: 1px;">Rutinas Activas</span>
    </div>

    <div class="table-responsive">
        <table class="table-md3">
            <thead>
                <tr>
                    <th class="ps-4">Nombre Rutina</th>
                    <th>Socio Asignado</th>
                    <th>Estado</th>
                    <th class="text-end pe-4">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4">
                            <span class="text-white fw-bold brand-font">@item.Nombre</span>
                        </td>
                        <td>
                            <div class="d-flex align-items-center gap-2">
                                <div class="rounded-circle bg-dark border border-secondary d-flex align-items-center justify-content-center text-secondary" style="width: 28px; height: 28px;">
                                    <i class="bi bi-person-fill" style="font-size: 0.8rem;"></i>
                                </div>
                                <span class="text-secondary">@item.SocioNombre</span>
                            </div>
                        </td>
                        <td>
                            <span class="badge rounded-pill bg-dark border border-success text-success px-3">
                                Activa
                            </span>
                        </td>
                        <td class="text-end pe-4">
                            <div class="d-flex justify-content-end gap-2">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn-md3-icon text-info" title="Ver Detalle">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn-md3-icon" title="Editar Rutina">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="4" class="text-center py-5">
                            <div class="text-muted opacity-50">
                                @if (ViewData["BusquedaActual"] != null)
                                {
                                    <i class="bi bi-search fs-1 d-block mb-3"></i>
                                    <h5 class="fw-normal brand-font">No se encontraron resultados</h5>
                                    <p class="small">Intenta con otro nombre de socio o rutina.</p>
                                }
                                else
                                {
                                    <i class="bi bi-clipboard-x fs-1 d-block mb-3"></i>
                                    <h5 class="fw-normal brand-font">Sin rutinas asignadas</h5>
                                    <p class="small">Crea la primera rutina para empezar el seguimiento.</p>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>