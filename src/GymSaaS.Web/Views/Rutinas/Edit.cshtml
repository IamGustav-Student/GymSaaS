@model GymSaaS.Application.Rutinas.Commands.UpdateRutina.UpdateRutinaCommand

@{
    ViewData["Title"] = "Editar Rutina";
    Layout = "~/Views/Shared/_LayoutMD3.cshtml";
    var ejerciciosList = ViewData["ListaEjercicios"] as IEnumerable<GymSaaS.Application.Ejercicios.Queries.GetEjercicios.EjercicioDto>;
}

<form asp-action="Edit" id="formRutina">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="SocioId" />

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <a asp-action="Index" class="btn-md3-icon me-3 text-decoration-none">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h2 class="brand-font m-0 text-white">Editar Rutina</h2>
                <small class="text-muted font-monospace">ID: #@Model.Id</small>
            </div>
        </div>
        <button type="submit" class="btn-md3 btn-md3-primary">
            <i class="bi bi-check-circle me-2"></i> Guardar Cambios
        </button>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="glass-panel h-100">
                <div class="d-flex align-items-center mb-4 pb-3 border-bottom border-secondary border-opacity-25">
                    <i class="bi bi-sliders text-info fs-5 me-2"></i>
                    <span class="fw-bold text-uppercase text-white" style="letter-spacing: 1px;">Configuración</span>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label text-secondary small text-uppercase fw-bold">Nombre</label>
                    <input asp-for="Nombre" class="form-control bg-dark border-secondary text-white" />
                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="glass-panel h-100">
                <div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom border-secondary border-opacity-25">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-dumbbell text-warning fs-5 me-2"></i>
                        <span class="fw-bold text-uppercase text-white" style="letter-spacing: 1px;">Ejercicios</span>
                    </div>
                    <button type="button" class="btn btn-sm btn-outline-info rounded-pill px-3" onclick="agregarFila()">
                        <i class="bi bi-plus-lg me-1"></i> Agregar
                    </button>
                </div>

                <div class="table-responsive">
                    <table class="table-md3 align-middle">
                        <thead>
                            <tr>
                                <th style="width: 35%;">Ejercicio</th>
                                <th style="width: 10%; text-align: center;">Series</th>
                                <th style="width: 10%; text-align: center;">Reps</th>
                                <th>Carga / Notas</th>
                                <th style="width: 5%;"></th>
                            </tr>
                        </thead>
                        <tbody id="tbodyEjercicios"></tbody>
                    </table>
                </div>
                <div id="emptyMessage" class="text-center py-5 text-muted opacity-50" style="display:none;">
                    <i class="bi bi-arrow-up-circle fs-3 mb-2 d-block"></i>
                    <small>Agrega ejercicios a la rutina</small>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        var catalogo = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ejerciciosList));
        var ejerciciosExistentes = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Ejercicios));

        var contadorFilas = 0;

        document.addEventListener("DOMContentLoaded", function() {
            if (ejerciciosExistentes && ejerciciosExistentes.length > 0) {
                ejerciciosExistentes.forEach(ex => {
                    agregarFila(ex.EjercicioId, ex.Series, ex.Repeticiones, ex.PesoSugerido, ex.Notas);
                });
            } else {
                document.getElementById('emptyMessage').style.display = 'block';
            }
        });

        function agregarFila(ejId = "", series = 4, reps = 10, peso = "", notas = "") {
            document.getElementById('emptyMessage').style.display = 'none';

            const tbody = document.getElementById('tbodyEjercicios');
            const row = document.createElement('tr');
            row.id = 'fila_' + contadorFilas;

            // Construir opciones del Select
            let options = '<option value="">-- Elegir --</option>';
            let grupoActual = "";
            catalogo.sort((a,b) => (a.GrupoMuscular || "").localeCompare(b.GrupoMuscular || ""));

            catalogo.forEach(e => {
                let g = e.GrupoMuscular || "General";
                if(g !== grupoActual) {
                    if(grupoActual !== "") options += '</optgroup>';
                    options += `<optgroup label="${g}" class="text-white bg-secondary">`;
                    grupoActual = g;
                }
                let selected = (e.Id == ejId) ? "selected" : "";
                options += `<option value="${e.Id}" class="text-white bg-dark" ${selected}>${e.Nombre}</option>`;
            });
            options += '</optgroup>';

            peso = peso || "";
            notas = notas || "";

            row.innerHTML = `
                <td>
                    <select name="Ejercicios[${contadorFilas}].EjercicioId" class="form-select form-select-sm bg-dark border-secondary text-white" required>
                        ${options}
                    </select>
                </td>
                <td>
                    <input type="number" name="Ejercicios[${contadorFilas}].Series" class="form-control form-control-sm bg-dark border-secondary text-white text-center" value="${series}" required min="1" />
                </td>
                <td>
                    <input type="number" name="Ejercicios[${contadorFilas}].Repeticiones" class="form-control form-control-sm bg-dark border-secondary text-white text-center" value="${reps}" required min="1" />
                </td>
                <td>
                    <input type="text" name="Ejercicios[${contadorFilas}].PesoSugerido" class="form-control form-control-sm bg-dark border-secondary text-white mb-1" placeholder="Peso" value="${peso}" />
                    <input type="text" name="Ejercicios[${contadorFilas}].Notas" class="form-control form-control-sm bg-dark border-secondary text-secondary" placeholder="Notas" style="font-size: 0.75rem;" value="${notas}" />
                </td>
                <td class="text-end">
                    <button type="button" class="btn btn-sm btn-link text-danger p-0 hover-glow" onclick="eliminarFila('fila_${contadorFilas}')">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </td>
            `;

            tbody.appendChild(row);
            contadorFilas++;
        }

        function eliminarFila(id) {
            const row = document.getElementById(id);
            if(row) row.remove();

            const tbody = document.getElementById('tbodyEjercicios');
            if(tbody.children.length === 0) {
                document.getElementById('emptyMessage').style.display = 'block';
            }
        }
    </script>
}