@model GymSaaS.Web.Models.LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Iniciar Sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gymvo OS</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/gymvo-cyberpunk.css" asp-append-version="true" />

    <style>
        /* Ajustes específicos para centrar el Login verticalmente */
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 20px;
        }

        .auth-card {
            width: 100%;
            max-width: 450px;
        }

        .form-control-cyber {
            background: rgba(0, 0, 0, 0.4);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: #fff;
            padding: 12px 15px;
            border-radius: 8px;
        }

            .form-control-cyber:focus {
                background: rgba(0, 0, 0, 0.6);
                border-color: var(--md-sys-color-primary);
                box-shadow: 0 0 15px rgba(0, 243, 255, 0.2);
                color: #fff;
            }
    </style>
</head>
<body>

    <div class="auth-card fade-in-up">
        <div class="text-center mb-5">
            <i class="bi bi-cpu-fill text-info display-1" style="filter: drop-shadow(0 0 15px cyan);"></i>
            <h1 class="brand-font text-white mt-3" style="letter-spacing: 4px;">GYMVO <span class="text-info">OS</span></h1>
            <p class="text-secondary">Sistema de Gestión de Alto Rendimiento</p>
        </div>

        <div class="glass-panel p-4 p-md-5">
            <h3 class="text-white brand-font mb-4">Bienvenido</h3>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger bg-danger bg-opacity-10 border-danger text-danger rounded-3 mb-4 small">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> Credenciales incorrectas.
                </div>
            }

            <form asp-action="Login" method="post">
                <div class="mb-4">
                    <label asp-for="Email" class="form-label text-secondary small text-uppercase fw-bold">Correo Electrónico</label>
                    <div class="input-group">
                        <span class="input-group-text bg-dark border-secondary text-secondary"><i class="bi bi-person"></i></span>
                        <input asp-for="Email" class="form-control bg-dark border-secondary text-white" placeholder="usuario@gymvo.com" autofocus />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-5">
                    <label asp-for="Password" class="form-label text-secondary small text-uppercase fw-bold">Contraseña</label>
                    <div class="input-group">
                        <span class="input-group-text bg-dark border-secondary text-secondary"><i class="bi bi-key"></i></span>
                        <input asp-for="Password" type="password" class="form-control bg-dark border-secondary text-white" placeholder="••••••" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="d-grid mb-4">
                    <button type="submit" class="btn-md3 btn-md3-primary py-3 fs-6">
                        INICIAR SESIÓN <i class="bi bi-arrow-right-short fs-4 ms-1"></i>
                    </button>
                </div>

                <div class="text-center pt-3 border-top border-secondary border-opacity-25">
                    <p class="text-secondary small mb-2">¿No tienes cuenta?</p>
                    <a asp-action="Register" class="text-info text-decoration-none fw-bold hover-glow">
                        REGISTRAR GIMNASIO
                    </a>
                </div>
            </form>
        </div>

        <div class="text-center mt-4">
            <a asp-controller="Home" asp-action="Index" class="text-secondary text-decoration-none small opacity-50">
                &copy; @DateTime.Now.Year Gymvo Systems
            </a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
</body>
</html>