@model GymSaaS.Web.Models.RegisterTenantViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registro - GymSaaS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .register-card {
            background: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            width: 100%;
            max-width: 500px;
        }

        .brand-logo {
            color: #1e3c72;
            font-weight: bold;
            font-size: 2rem;
            text-align: center;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>

    <div class="register-card">
        <div class="brand-logo">GymSaaS</div>
        <h5 class="text-center text-muted mb-4">Alta de Gimnasio</h5>

        @if (!string.IsNullOrEmpty(Model?.ErrorMessage))
        {
            <div class="alert alert-danger text-center p-2 text-sm">@Model.ErrorMessage</div>
        }

        <form asp-action="Register" method="post">

            <div class="mb-3">
                <label asp-for="GymName" class="form-label text-muted small">Nombre del Gimnasio</label>
                <input asp-for="GymName" class="form-control" placeholder="Ej: Power Gym" />
                <span asp-validation-for="GymName" class="text-danger small"></span>
            </div>

            <hr class="my-4" />

            <div class="mb-3">
                <label asp-for="AdminName" class="form-label text-muted small">Tu Nombre Completo</label>
                <input asp-for="AdminName" class="form-control" placeholder="Juan Pérez" />
                <span asp-validation-for="AdminName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AdminEmail" class="form-label text-muted small">Correo Electrónico (Usuario)</label>
                <input asp-for="AdminEmail" class="form-control" placeholder="admin@powergym.com" />
                <span asp-validation-for="AdminEmail" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="form-label text-muted small">Contraseña</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Mínimo 6 caracteres" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 btn-lg">Registrar Gimnasio</button>
        </form>

        <div class="text-center mt-3">
            <a href="@Url.Action("Login", "Auth")" class="text-decoration-none">¿Ya tienes cuenta? Inicia Sesión</a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>