@model GymSaaS.Web.Models.RegisterTenantViewModel

@{
    Layout = null;
    ViewData["Title"] = "Registro";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gymvo OS</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/gymvo-cyberpunk.css" asp-append-version="true" />

    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 20px;
            background-color: #050505;
        }

        .auth-card {
            width: 100%;
            max-width: 650px;
        }

        /* Estilos para las Cards de Planes */
        .plan-card {
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border: 1px solid rgba(255,255,255,0.1);
            background: rgba(255,255,255,0.03);
            position: relative;
            overflow: hidden;
        }

            .plan-card:hover {
                border-color: var(--md-sys-color-primary);
                transform: translateY(-5px);
                background: rgba(255,255,255,0.05);
            }

        /* Efecto cuando el radio oculto es seleccionado */
        .btn-check:checked + .plan-card {
            border-color: var(--md-sys-color-primary);
            background: rgba(0, 243, 255, 0.08);
            box-shadow: 0 0 20px rgba(0, 243, 255, 0.25);
        }

            .btn-check:checked + .plan-card::after {
                content: "\f26a"; /* Bootstrap icon check-circle-fill */
                font-family: "bootstrap-icons";
                position: absolute;
                top: 10px;
                right: 10px;
                color: var(--md-sys-color-primary);
                font-size: 1.2rem;
            }

        .text-gradient {
            background: linear-gradient(90deg, #00f3ff, #ff00ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
    </style>
</head>
<body>

    <div class="auth-card fade-in-up">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-gradient brand-font display-5">GYMVO</h2>
            <p class="text-secondary small text-uppercase tracking-widest">Digitaliza tu imperio</p>
        </div>

        <div class="glass-panel p-4 p-md-5">
            <form asp-action="Register" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="alert alert-danger bg-danger bg-opacity-10 border-danger text-danger small rounded-3 mb-4" role="alert"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="GymName" class="form-label text-white-50 small text-uppercase brand-font">Nombre del Gimnasio</label>
                        <input asp-for="GymName" class="form-control bg-dark border-secondary text-white p-3" placeholder="Ej: Iron Forge Gym" />
                        <span asp-validation-for="GymName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="AdminName" class="form-label text-white-50 small text-uppercase brand-font">Tu Nombre</label>
                        <input asp-for="AdminName" class="form-control bg-dark border-secondary text-white p-3" placeholder="Dueño/Manager" />
                        <span asp-validation-for="AdminName" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="AdminEmail" class="form-label text-white-50 small text-uppercase brand-font">Email de Acceso</label>
                    <input asp-for="AdminEmail" class="form-control bg-dark border-secondary text-white p-3" placeholder="correo@ejemplo.com" />
                    <span asp-validation-for="AdminEmail" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="form-label text-white-50 small text-uppercase brand-font">Contraseña Segura</label>
                    <input asp-for="Password" type="password" class="form-control bg-dark border-secondary text-white p-3" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label text-white-50 small text-uppercase brand-font d-block mb-3">Elige tu Plan de Suscripción</label>
                    <div class="row g-3">
                        @* Plan FREE *@
                        <div class="col-md-4">
                            <input type="radio" class="btn-check" asp-for="SelectedPlan" id="plan_free" value="Free" checked>
                            <label class="plan-card d-block p-3 rounded-3 h-100" for="plan_free">
                                <div class="text-info brand-font mb-1" style="font-size: 0.8rem;">INICIAL</div>
                                <div class="text-white fw-bold fs-4">$0</div>
                                <div class="text-white-50 small mt-1">30 días Trial</div>
                            </label>
                        </div>

                        @* Plan PRO *@
                        <div class="col-md-4">
                            <input type="radio" class="btn-check" asp-for="SelectedPlan" id="plan_pro" value="Pro">
                            <label class="plan-card d-block p-3 rounded-3 h-100" for="plan_pro">
                                <div class="text-primary brand-font mb-1" style="font-size: 0.8rem;">PRO</div>
                                <div class="text-white fw-bold fs-4">$15.000</div>
                                <div class="text-white-50 small mt-1">Mensual</div>
                            </label>
                        </div>

                        @* Plan ELITE *@
                        <div class="col-md-4">
                            <input type="radio" class="btn-check" asp-for="SelectedPlan" id="plan_elite" value="Elite">
                            <label class="plan-card d-block p-3 rounded-3 h-100" for="plan_elite">
                                <div class="text-warning brand-font mb-1" style="font-size: 0.8rem;">ELITE</div>
                                <div class="text-white fw-bold fs-4">$150.000</div>
                                <div class="text-white-50 small mt-1">Anual (-20%)</div>
                            </label>
                        </div>
                    </div>
                    <span asp-validation-for="SelectedPlan" class="text-danger small mt-2 d-block"></span>
                </div>

                <div class="d-grid mb-4">
                    <button type="submit" class="btn-md3 btn-md3-primary py-3">
                        CREAR CUENTA Y EMPEZAR <i class="bi bi-chevron-right ms-1"></i>
                    </button>
                </div>

                <div class="text-center">
                    <a asp-action="Login" class="text-decoration-none text-white small opacity-75 hover-glow">
                        ¿Ya tienes cuenta? <span class="text-primary fw-bold">Inicia Sesión</span>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>