@model GymSaaS.Application.Clases.Commands.CreateClase.CreateClaseCommand

@{
    ViewData["Title"] = "Nueva Clase";
}

<div class="row justify-content-center fade-in-up">
    <div class="col-md-8 col-lg-6">

        <div class="d-flex align-items-center mb-4">
            <a asp-action="Index" class="btn btn-outline-light btn-sm rounded-circle me-3" style="width: 32px; height: 32px; padding: 0; display: flex; align-items: center; justify-content: center;">
                <i class="bi bi-arrow-left"></i>
            </a>
            <h2 class="fw-bold text-white mb-0">Agendar Clase</h2>
        </div>

        <div class="card border-0 shadow-lg">
            <div class="card-header bg-transparent d-flex align-items-center py-3">
                <i class="bi bi-plus-circle text-primary me-2"></i> <span class="fw-bold">Detalles del Evento</span>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger bg-danger bg-opacity-10 border-danger text-danger rounded-3 mb-4" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="Nombre" class="form-label">NOMBRE DE LA CLASE</label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-muted"><i class="bi bi-type-h1"></i></span>
                            <input asp-for="Nombre" class="form-control form-control-lg bg-dark border-secondary text-white" placeholder="Ej: Yoga Matutino" />
                        </div>
                        <span asp-validation-for="Nombre" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="FechaHoraInicio" class="form-label">FECHA Y HORA</label>
                            <div class="input-group">
                                <span class="input-group-text bg-dark border-secondary text-muted"><i class="bi bi-calendar-date"></i></span>
                                <input asp-for="FechaHoraInicio" class="form-control bg-dark border-secondary text-white" type="datetime-local"
                                       value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                            </div>
                            <span asp-validation-for="FechaHoraInicio" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label asp-for="DuracionMinutos" class="form-label">DURACIÓN (MIN)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-dark border-secondary text-muted"><i class="bi bi-clock"></i></span>
                                <input asp-for="DuracionMinutos" class="form-control bg-dark border-secondary text-white" type="number" min="15" step="15" value="60" />
                            </div>
                            <span asp-validation-for="DuracionMinutos" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="Instructor" class="form-label">INSTRUCTOR</label>
                            <div class="input-group">
                                <span class="input-group-text bg-dark border-secondary text-muted"><i class="bi bi-person-badge"></i></span>
                                <input asp-for="Instructor" class="form-control bg-dark border-secondary text-white" placeholder="Ej: Juan Pérez" />
                            </div>
                            <span asp-validation-for="Instructor" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label asp-for="CupoMaximo" class="form-label">CUPO MÁXIMO</label>
                            <div class="input-group">
                                <span class="input-group-text bg-dark border-secondary text-muted"><i class="bi bi-people-fill"></i></span>
                                <input asp-for="CupoMaximo" class="form-control bg-dark border-secondary text-white" type="number" min="1" value="20" />
                            </div>
                            <span asp-validation-for="CupoMaximo" class="text-danger small mt-1 d-block"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                            <i class="bi bi-check-circle me-2"></i> Confirmar y Agendar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-light border-0">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}