@model GymSaaS.Application.Clases.Commands.CreateClase.CreateClaseCommand

@{
    ViewData["Title"] = "Nueva Clase";
    Layout = "~/Views/Shared/_LayoutMD3.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

        <div class="d-flex align-items-center mb-4">
            <a asp-action="Index" class="btn-md3-icon me-3 text-decoration-none">
                <i class="bi bi-arrow-left"></i>
            </a>
            <h2 class="brand-font m-0 text-white">Agendar Clase</h2>
        </div>

        <div class="glass-panel">
            <div class="d-flex align-items-center mb-4 pb-3 border-bottom border-secondary border-opacity-25">
                <i class="bi bi-calendar-plus text-info fs-4 me-2"></i>
                <span class="fw-bold text-uppercase text-info" style="letter-spacing: 1px;">Detalles del Evento</span>
            </div>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger bg-danger bg-opacity-10 border-danger text-danger rounded-3 mb-4 small"></div>

                <div class="mb-4">
                    <label asp-for="Nombre" class="form-label text-secondary small text-uppercase fw-bold">Nombre de la Clase</label>
                    <input asp-for="Nombre" class="form-control bg-dark border-secondary text-white" placeholder="Ej: CrossFit Avanzado" autofocus />
                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="FechaHoraInicio" class="form-label text-secondary small text-uppercase fw-bold">Fecha y Hora</label>
                        <input asp-for="FechaHoraInicio" class="form-control bg-dark border-secondary text-white" type="datetime-local"
                               value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                        <span asp-validation-for="FechaHoraInicio" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="DuracionMinutos" class="form-label text-secondary small text-uppercase fw-bold">Duración (Min)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-secondary"><i class="bi bi-stopwatch"></i></span>
                            <input asp-for="DuracionMinutos" class="form-control bg-dark border-secondary text-white" type="number" min="15" step="15" value="60" />
                        </div>
                        <span asp-validation-for="DuracionMinutos" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row g-3 mt-1">
                    <div class="col-md-6">
                        <label asp-for="Instructor" class="form-label text-secondary small text-uppercase fw-bold">Instructor</label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-secondary"><i class="bi bi-person-badge"></i></span>
                            <input asp-for="Instructor" class="form-control bg-dark border-secondary text-white" placeholder="Ej: Juan Pérez" />
                        </div>
                        <span asp-validation-for="Instructor" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CupoMaximo" class="form-label text-secondary small text-uppercase fw-bold">Cupo Máximo</label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-secondary"><i class="bi bi-people-fill"></i></span>
                            <input asp-for="CupoMaximo" class="form-control bg-dark border-secondary text-white" type="number" min="1" value="20" />
                        </div>
                        <span asp-validation-for="CupoMaximo" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-grid gap-3 mt-5">
                    <button type="submit" class="btn-md3 btn-md3-primary w-100 py-3">
                        <i class="bi bi-check-circle me-2"></i> Confirmar y Agendar
                    </button>
                    <a asp-action="Index" class="btn btn-link text-secondary text-decoration-none text-center">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}