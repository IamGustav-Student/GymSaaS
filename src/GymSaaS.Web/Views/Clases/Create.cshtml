@model GymSaaS.Application.Clases.Commands.CreateClase.CreateClaseCommand

@{
    ViewData["Title"] = "Crear Clase";
    Layout = "_LayoutMD3";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card bg-dark border-secondary shadow-lg">
            <div class="card-header border-secondary bg-transparent py-3">
                <h5 class="mb-0 text-white brand-font">NUEVA CLASE</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label text-secondary small text-uppercase fw-bold">Nombre de la Clase</label>
                        <input asp-for="Nombre" class="form-control bg-black border-secondary text-white" placeholder="Ej: Crossfit WOD" />
                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Instructor" class="form-label text-secondary small text-uppercase fw-bold">Instructor</label>
                        <input asp-for="Instructor" class="form-control bg-black border-secondary text-white" placeholder="Ej: Juan Pérez" />
                        <span asp-validation-for="Instructor" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FechaHoraInicio" class="form-label text-secondary small text-uppercase fw-bold">Fecha y Hora</label>
                            <input asp-for="FechaHoraInicio" class="form-control bg-black border-secondary text-white" />
                            <span asp-validation-for="FechaHoraInicio" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="DuracionMinutos" class="form-label text-secondary small text-uppercase fw-bold">Duración (min)</label>
                            <input asp-for="DuracionMinutos" class="form-control bg-black border-secondary text-white" value="60" />
                            <span asp-validation-for="DuracionMinutos" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CupoMaximo" class="form-label text-secondary small text-uppercase fw-bold">Cupo Máximo</label>
                            <input asp-for="CupoMaximo" class="form-control bg-black border-secondary text-white" />
                            <span asp-validation-for="CupoMaximo" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Precio" class="form-label text-secondary small text-uppercase fw-bold">Precio Extra ($)</label>
                            <input asp-for="Precio" class="form-control bg-black border-secondary text-white" value="0" />
                            <small class="text-secondary" style="font-size: 0.7rem;">0 = Incluido en membresía</small>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary fw-bold">GUARDAR CLASE</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}