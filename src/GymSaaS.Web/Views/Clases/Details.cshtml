@model GymSaaS.Application.Clases.Queries.GetClaseById.ClaseDetailDto

@{
    ViewData["Title"] = "Detalles de la Clase";
    Layout = "_LayoutMD3";
    var porcentaje = (double)Model.CupoReservado / Model.CupoMaximo * 100;
    var colorBarra = porcentaje >= 100 ? "danger" : "success";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="text-white brand-font mb-0">@Model.Nombre</h4>
        <div class="text-secondary mt-1">
            <i class="bi bi-calendar-event me-1"></i> @Model.FechaHoraInicio.ToString("dd/MM/yyyy HH:mm")
            <span class="mx-2">|</span>
            <i class="bi bi-person-badge me-1"></i> @Model.Instructor
        </div>
    </div>
    <div class="text-end">
        <h3 class="mb-0 @(porcentaje >= 100 ? "text-danger" : "text-white")">@Model.CupoReservado <small class="text-secondary fs-6">/ @Model.CupoMaximo</small></h3>
        <div class="progress mt-2" style="width: 150px; height: 6px; background: #333;">
            <div class="progress-bar bg-@colorBarra" style="width: @porcentaje%"></div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card bg-dark border-secondary h-100">
            <div class="card-header border-secondary bg-success bg-opacity-10 d-flex justify-content-between align-items-center">
                <h6 class="mb-0 text-success fw-bold"><i class="bi bi-check-circle me-2"></i>CONFIRMADOS</h6>
                <span class="badge bg-success">@Model.Reservas.Count</span>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    @foreach (var socio in Model.Reservas)
                    {
                        <div class="list-group-item bg-transparent border-secondary d-flex align-items-center">
                            @if (!string.IsNullOrEmpty(socio.FotoUrl))
                            {
                                <img src="@socio.FotoUrl" class="rounded-circle me-3 border border-secondary" width="40" height="40">
                            }
                            else
                            {
                                <div class="rounded-circle me-3 bg-secondary d-flex align-items-center justify-content-center text-white" style="width:40px; height:40px;">
                                    <i class="bi bi-person"></i>
                                </div>
                            }
                            <div class="flex-grow-1">
                                <h6 class="mb-0 text-white">@socio.NombreCompleto</h6>
                                <small class="text-secondary">DNI: @socio.Dni</small>
                            </div>
                            <div class="text-end">
                                <small class="text-muted d-block">Reservado:</small>
                                <small class="text-secondary font-monospace">@socio.FechaRegistro.ToString("HH:mm")</small>
                            </div>
                        </div>
                    }
                    @if (!Model.Reservas.Any())
                    {
                        <div class="text-center py-5 text-secondary">
                            <i class="bi bi-people fs-1 opacity-25"></i>
                            <p class="mt-2">Aún no hay inscritos.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card bg-dark border-secondary h-100">
            <div class="card-header border-secondary bg-warning bg-opacity-10 d-flex justify-content-between align-items-center">
                <h6 class="mb-0 text-warning fw-bold"><i class="bi bi-hourglass-split me-2"></i>LISTA DE ESPERA</h6>
                <span class="badge bg-warning text-dark">@Model.ListaEspera.Count</span>
            </div>
            <div class="card-body p-0">
                @if (Model.ListaEspera.Any())
                {
                    <div class="alert alert-info border-0 bg-opacity-10 m-3 mb-0 small">
                        <i class="bi bi-info-circle me-1"></i> Si se libera un cupo, el primero de esta lista ingresará automáticamente.
                    </div>
                    <div class="list-group list-group-flush mt-2">
                        @foreach (var waiter in Model.ListaEspera)
                        {
                            <div class="list-group-item bg-transparent border-secondary d-flex align-items-center">
                                <div class="fw-bold text-warning me-3">#@(Model.ListaEspera.IndexOf(waiter) + 1)</div>
                                <div>
                                    <h6 class="mb-0 text-white small">@waiter.NombreCompleto</h6>
                                    <small class="text-secondary" style="font-size: 0.75rem;">Espera desde: @waiter.FechaRegistro.ToString("dd/MM HH:mm")</small>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5 text-secondary">
                        <i class="bi bi-check2-circle fs-1 opacity-25"></i>
                        <p class="mt-2 small">Nadie en espera.<br>¡Hay cupo disponible!</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">Volver al listado</a>
</div>