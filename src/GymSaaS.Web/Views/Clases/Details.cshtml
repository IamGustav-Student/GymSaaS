@model GymSaaS.Application.Clases.Queries.GetClases.ClaseDto

@{
    ViewData["Title"] = "Detalle de Clase";
    Layout = "~/Views/Shared/_LayoutMD3.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="d-flex align-items-center">
        <a asp-action="Index" class="btn-md3-icon me-3 text-decoration-none">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div>
            <h2 class="brand-font m-0 text-white">@Model.Nombre</h2>
            <p class="text-info small mb-0 fw-bold">@Model.FechaHoraInicio.ToString("dddd dd/MM • HH:mm") hs</p>
        </div>
    </div>

    <div class="d-flex gap-3">
        <div class="px-3 py-2 rounded-3 border border-secondary text-center" style="background: rgba(0,0,0,0.4);">
            <span class="d-block text-white fw-bold fs-5">@Model.CupoReservado</span>
            <small class="text-muted text-uppercase" style="font-size:0.6rem; letter-spacing: 1px;">Inscriptos</small>
        </div>
        <div class="px-3 py-2 rounded-3 border border-info text-center" style="background: rgba(0, 243, 255, 0.1);">
            <span class="d-block text-info fw-bold fs-5">@(Model.CupoMaximo - Model.CupoReservado)</span>
            <small class="text-info text-uppercase" style="font-size:0.6rem; letter-spacing: 1px;">Libres</small>
        </div>
    </div>
</div>

<div class="glass-panel">
    <div class="d-flex align-items-center mb-4 pb-3 border-bottom border-secondary border-opacity-25">
        <i class="bi bi-people-fill text-white fs-5 me-2"></i>
        <span class="fw-bold text-uppercase text-white" style="letter-spacing: 1px;">Asistentes Confirmados</span>
    </div>

    <div class="table-responsive">
        <table class="table-md3">
            <thead>
                <tr>
                    <th class="ps-4">Alumno</th>
                    <th>Fecha Inscripción</th>
                    <th class="text-center">Estado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var alumno in Model.Asistentes)
                {
                    <tr>
                        <td class="ps-4">
                            <div class="d-flex align-items-center gap-2">
                                <div class="rounded-circle bg-dark border border-secondary d-flex align-items-center justify-content-center text-secondary" style="width: 32px; height: 32px;">
                                    <i class="bi bi-person-fill"></i>
                                </div>
                                <span class="text-white fw-bold">@alumno.SocioNombre</span>
                            </div>
                        </td>
                        <td class="text-muted">
                            @alumno.FechaReserva.ToString("dd/MM/yyyy HH:mm")
                        </td>
                        <td class="text-center">
                            <span class="badge-neon success">Confirmado</span>
                        </td>
                    </tr>
                }
                @if (!Model.Asistentes.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center py-5">
                            <div class="text-muted opacity-50">
                                <i class="bi bi-person-dash fs-1 d-block mb-3"></i>
                                <p class="small">La lista está vacía.</p>
                            </div>
                            <a asp-action="Reservar" asp-route-id="@Model.Id" class="btn-md3 btn-md3-primary mt-3">
                                Inscribir Alumno Ahora
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>