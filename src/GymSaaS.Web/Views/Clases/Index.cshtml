@model IEnumerable<GymSaaS.Application.Clases.Queries.GetClases.ClaseDto>

@{
    ViewData["Title"] = "Gestión de Clases";
    Layout = "_LayoutMD3";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 text-white brand-font">PROGRAMACIÓN</h1>
        <p class="text-secondary small">Gestiona horarios, cupos y listas de espera.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary fw-bold shadow-sm">
        <i class="bi bi-plus-lg me-2"></i> NUEVA CLASE
    </a>
</div>

<div class="card bg-dark border-secondary shadow-lg">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-dark table-hover mb-0 align-middle">
                <thead class="bg-black text-uppercase small text-secondary">
                    <tr>
                        <th class="ps-4">Horario</th>
                        <th>Clase / Instructor</th>
                        <th>Ocupación</th>
                        <th class="text-center">Espera</th>
                        <th class="text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var porcentaje = (double)item.CupoActual / item.CupoMaximo * 100;
                        var colorBarra = porcentaje >= 100 ? "danger" : (porcentaje > 75 ? "warning" : "success");

                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold text-white">@item.FechaHoraInicio.ToString("HH:mm")</div>
                                <small class="text-secondary">@item.FechaHoraInicio.ToString("dd/MM")</small>
                            </td>
                            <td>
                                <div class="fw-bold text-info">@item.Nombre</div>
                                <small class="text-muted">@item.Instructor</small>
                            </td>
                            <td style="min-width: 150px;">
                                <div class="d-flex justify-content-between small mb-1">
                                    <span class="text-white">@item.CupoActual / @item.CupoMaximo</span>
                                    <span class="text-@colorBarra">@porcentaje.ToString("0")%</span>
                                </div>
                                <div class="progress" style="height: 6px; background: rgba(255,255,255,0.1);">
                                    <div class="progress-bar bg-@colorBarra" role="progressbar" style="width: @porcentaje%"></div>
                                </div>
                            </td>
                            <td class="text-center">
                                @if (item.CantidadEnEspera > 0)
                                {
                                    <span class="badge bg-danger bg-opacity-25 text-danger border border-danger">
                                        <i class="bi bi-hourglass-split me-1"></i> +@item.CantidadEnEspera
                                    </span>
                                }
                                else
                                {
                                    <span class="text-secondary opacity-25">-</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <a asp-action="Reservar" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success" title="Inscribir Alumno">
                                        <i class="bi bi-person-plus-fill"></i>
                                    </a>

                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Ver Lista">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('¿Eliminar esta clase?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger ms-1" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>