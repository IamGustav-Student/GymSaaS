@model IEnumerable<GymSaaS.Application.Clases.Queries.GetClases.ClaseDto>

@{
    ViewData["Title"] = "Gestión de Clases";
    Layout = "~/Views/Shared/_LayoutMD3.cshtml"; // Forzamos el nuevo Layout
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-secondary mb-0">Administra horarios y cupos</p>
    </div>
    <a asp-action="Create" class="btn-md3 btn-md3-primary">
        <i class="bi bi-plus-lg"></i> Nueva Clase
    </a>
</div>

<div class="glass-panel">
    <div class="table-responsive">
        <table class="table-md3">
            <thead>
                <tr>
                    <th>Clase</th>
                    <th>Instructor</th>
                    <th>Horario</th>
                    <th>Duración</th>
                    <th class="text-center">Estado</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center gap-3">
                                <div class="rounded-circle bg-dark border border-info d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                    <i class="bi bi-activity text-info"></i>
                                </div>
                                <div>
                                    <span class="d-block fw-bold text-white">@item.Nombre</span>
                                    <small class="text-muted">ID: #@item.Id</small>
                                </div>
                            </div>
                        </td>
                        <td class="text-secondary">
                            <i class="bi bi-person me-2"></i> @(item.Instructor ?? "Sin asignar")
                        </td>
                        <td>
                            <span class="d-block text-white">@item.FechaHoraInicio.ToString("dd/MM/yyyy")</span>
                            <small class="text-info">@item.FechaHoraInicio.ToString("HH:mm") hs</small>
                        </td>
                        <td class="text-secondary">
                            <i class="bi bi-stopwatch me-1"></i> @item.DuracionMinutos min
                        </td>
                        <td class="text-center">
                            @if (item.Activa)
                            {
                                <span class="badge-neon success">Activa</span>
                            }
                            else
                            {
                                <span class="badge-neon warning">Cancelada</span>
                            }
                            <div class="mt-1 small text-muted">
                                @item.CupoReservado / @item.CupoMaximo
                            </div>
                        </td>
                        <td class="text-end">
                            <div class="d-flex justify-content-end gap-2">
                                <a asp-action="Reservar" asp-route-id="@item.Id" class="btn-md3-icon text-info" title="Inscribir">
                                    <i class="bi bi-person-plus-fill"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn-md3-icon" title="Ver Lista">
                                    <i class="bi bi-list-ul"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn-md3-icon" title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center py-5 text-muted">
                            <i class="bi bi-calendar-x fs-1 d-block mb-3 opacity-50"></i>
                            No hay clases programadas.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>