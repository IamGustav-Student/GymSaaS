@{
    ViewData["Title"] = "Reserva Manual";
    Layout = "~/Views/Shared/_LayoutMD3.cshtml";
    var claseNombre = ViewBag.ClaseNombre as string;
    var fecha = ViewBag.ClaseFecha is DateTime f ? f.ToString("dd/MM/yyyy HH:mm") : "--";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">

        <div class="d-flex align-items-center mb-4">
            <a asp-action="Index" class="btn-md3-icon me-3 text-decoration-none">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h6 class="text-secondary text-uppercase small mb-0">Inscripción Manual</h6>
                <h3 class="brand-font m-0 text-white">@claseNombre</h3>
            </div>
        </div>

        <div class="card bg-dark border-secondary shadow-lg">
            <div class="card-header border-secondary bg-transparent py-3">
                <div class="d-flex align-items-center text-info">
                    <i class="bi bi-calendar-event me-2"></i>
                    <span class="fw-bold">@fecha</span>
                </div>
            </div>
            <div class="card-body p-4">

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger bg-danger bg-opacity-10 border-danger text-danger small mb-3">
                        <i class="bi bi-exclamation-triangle me-2"></i> @TempData["Error"]
                    </div>
                }

                <form asp-action="Reservar" method="post">
                    <input type="hidden" name="claseId" value="@ViewBag.ClaseId" />

                    <div class="mb-4">
                        <label class="form-label text-secondary small text-uppercase fw-bold">Seleccionar Socio</label>
                        <select name="socioId" class="form-select bg-dark border-secondary text-white p-3" asp-items="ViewBag.SocioId">
                            <option value="">-- Buscar Socio --</option>
                        </select>
                        <small class="text-muted mt-2 d-block">Selecciona el alumno a inscribir.</small>
                    </div>

                    <div class="alert alert-warning bg-opacity-10 border-warning text-warning small">
                        <i class="bi bi-info-circle me-1"></i> Esta acción inscribe al socio directamente, saltando la pasarela de pagos online. Asegúrese de cobrar en mostrador si corresponde.
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn-md3 btn-md3-primary py-3 fw-bold">
                            CONFIRMAR INSCRIPCIÓN
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>