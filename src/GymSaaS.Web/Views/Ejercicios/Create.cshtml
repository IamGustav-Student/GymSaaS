@model GymSaaS.Application.Ejercicios.Commands.CreateEjercicio.CreateEjercicioCommand

@{
    ViewData["Title"] = "Nuevo Ejercicio";
    Layout = "~/Views/Shared/_LayoutMD3.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

        <div class="d-flex align-items-center mb-4">
            <a asp-action="Index" class="btn-md3-icon me-3 text-decoration-none">
                <i class="bi bi-arrow-left"></i>
            </a>
            <h2 class="brand-font m-0 text-white">Alta de Ejercicio</h2>
        </div>

        <div class="glass-panel position-relative overflow-hidden">
            <div style="position: absolute; top: -10%; right: -10%; width: 200px; height: 200px; background: var(--md-sys-color-primary); filter: blur(90px); opacity: 0.1;"></div>

            <div class="p-2">
                <div class="d-flex align-items-center mb-4 text-info">
                    <i class="bi bi-activity fs-4 me-2"></i>
                    <span class="fw-bold text-uppercase" style="letter-spacing: 1px;">Datos Técnicos</span>
                </div>

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger bg-danger bg-opacity-10 border-danger text-danger rounded-3 mb-4 small"></div>

                    <div class="mb-4">
                        <label asp-for="Nombre" class="form-label text-secondary small text-uppercase fw-bold">Nombre del Ejercicio</label>
                        <input asp-for="Nombre" class="form-control bg-dark border-secondary text-white" placeholder="Ej: Press de Banca" autofocus />
                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="GrupoMuscular" class="form-label text-secondary small text-uppercase fw-bold">Grupo Muscular Principal</label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-secondary"><i class="bi bi-person-arms-up"></i></span>
                            <input asp-for="GrupoMuscular" class="form-control bg-dark border-secondary text-white" placeholder="Ej: Pectorales" />
                        </div>
                        <span asp-validation-for="GrupoMuscular" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="VideoUrl" class="form-label text-secondary small text-uppercase fw-bold">Enlace de Video (Opcional)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-secondary"><i class="bi bi-youtube"></i></span>
                            <input asp-for="VideoUrl" class="form-control bg-dark border-secondary text-white" placeholder="https://youtube.com/..." />
                        </div>
                        <span asp-validation-for="VideoUrl" class="text-danger small"></span>
                    </div>

                    <div class="mb-5">
                        <label asp-for="Descripcion" class="form-label text-secondary small text-uppercase fw-bold">Descripción Técnica</label>
                        <textarea asp-for="Descripcion" class="form-control bg-dark border-secondary text-white" rows="3" placeholder="Detalles de ejecución, postura, respiración..."></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-3">
                        <button type="submit" class="btn-md3 btn-md3-primary w-100 py-3">
                            <i class="bi bi-save me-2"></i> Guardar Ejercicio
                        </button>
                        <a asp-action="Index" class="btn btn-link text-secondary text-decoration-none text-center small">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}