@model IEnumerable<GymSaaS.Application.Ejercicios.Queries.GetEjercicios.EjercicioDto>

@{
    ViewData["Title"] = "Catálogo de Ejercicios";
}

<div class="d-flex justify-content-between align-items-center mb-4 fade-in">
    <div>
        <h2 class="fw-bold text-white mb-0"><i class="bi bi-collection-play me-2 text-primary"></i> Biblioteca de Ejercicios</h2>
        <p class="text-muted small mb-0">Gestiona los movimientos disponibles para las rutinas.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-lg me-1"></i> Nuevo Ejercicio
    </a>
</div>

<div class="card border-0 shadow-lg fade-in-up">
    <div class="card-header bg-transparent border-0 d-flex align-items-center">
        <i class="bi bi-list-check me-2 text-primary"></i> <span class="fw-bold">Listado General</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-dark text-white-50">
                    <tr>
                        <th class="ps-4">Ejercicio</th>
                        <th>Grupo Muscular</th>
                        <th>Descripción</th>
                        <th class="text-center">Recursos</th>
                        <th class="text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <span class="text-white fw-bold">@item.Nombre</span>
                            </td>
                            <td>
                                <span class="badge bg-dark border border-secondary text-white fw-normal px-3 rounded-pill">
                                    <i class="bi bi-layers me-1 text-muted"></i> @(item.GrupoMuscular ?? "General")
                                </span>
                            </td>
                            <td class="text-muted small" style="max-width: 300px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                @item.Descripcion
                            </td>
                            <td class="text-center">
                                @if (!string.IsNullOrEmpty(item.VideoUrl))
                                {
                                    <a href="@item.VideoUrl" target="_blank" class="btn btn-sm btn-outline-light rounded-pill px-3 py-1" style="font-size: 0.75rem;">
                                        <i class="bi bi-play-circle-fill text-danger me-1"></i> Video
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted small">-</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-light rounded-circle" style="width: 32px; height: 32px; padding: 0;" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <div class="text-muted">
                                    <i class="bi bi-dumbbell fs-1 d-block mb-3 opacity-50"></i>
                                    <h5 class="fw-normal">No hay ejercicios cargados</h5>
                                    <p class="small">Agrega el primero para comenzar a armar rutinas.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>