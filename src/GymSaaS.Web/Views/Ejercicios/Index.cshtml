@model IEnumerable<GymSaaS.Application.Ejercicios.Queries.GetEjercicios.EjercicioDto>

@{
    ViewData["Title"] = "Catálogo de Ejercicios";
    Layout = "~/Views/Shared/_LayoutMD3.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="brand-font m-0 text-white">Biblioteca de Ejercicios</h2>
        <p class="text-secondary small mb-0">Gestiona los movimientos para las rutinas</p>
    </div>
    <a asp-action="Create" class="btn-md3 btn-md3-primary">
        <i class="bi bi-plus-lg me-1"></i> Nuevo Ejercicio
    </a>
</div>

<div class="glass-panel">
    <div class="d-flex align-items-center mb-3 pb-2 border-bottom border-secondary border-opacity-25">
        <i class="bi bi-collection-play text-info fs-5 me-2"></i>
        <span class="fw-bold text-uppercase text-white" style="letter-spacing: 1px;">Listado General</span>
    </div>

    <div class="table-responsive">
        <table class="table-md3">
            <thead>
                <tr>
                    <th class="ps-4">Ejercicio</th>
                    <th>Grupo Muscular</th>
                    <th>Descripción</th>
                    <th class="text-center">Recursos</th>
                    <th class="text-end pe-4">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4">
                            <span class="text-white fw-bold brand-font" style="letter-spacing: 0.5px;">@item.Nombre</span>
                        </td>
                        <td>
                            <span class="badge rounded-pill bg-dark border border-info text-info px-3 py-2">
                                <i class="bi bi-layers-fill me-1" style="font-size: 0.7rem;"></i>
                                @(item.GrupoMuscular ?? "General")
                            </span>
                        </td>
                        <td class="text-secondary small text-truncate" style="max-width: 250px;">
                            @item.Descripcion
                        </td>
                        <td class="text-center">
                            @if (!string.IsNullOrEmpty(item.VideoUrl))
                            {
                                <a href="@item.VideoUrl" target="_blank" class="text-decoration-none text-danger hover-glow fw-bold small">
                                    <i class="bi bi-play-circle-fill fs-5 align-middle me-1"></i> Ver Video
                                </a>
                            }
                            else
                            {
                                <span class="text-muted opacity-25">-</span>
                            }
                        </td>
                        <td class="text-end pe-4">
                            <div class="d-flex justify-content-end gap-2">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn-md3-icon" title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center py-5">
                            <div class="text-muted opacity-50">
                                <i class="bi bi-dumbbell fs-1 d-block mb-3"></i>
                                <h5 class="fw-normal brand-font">Sin datos</h5>
                                <p class="small">No hay ejercicios cargados en el sistema.</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>