@model GymSaaS.Application.Socios.Queries.GetSocios.SocioDto

@{
    ViewData["Title"] = "Perfil del Socio";
    Layout = "~/Views/Shared/_LayoutMD3.cshtml";
}

<div class="row g-4">
    <div class="col-lg-4">
        <div class="glass-panel text-center p-4 mb-4 position-relative overflow-hidden">
            <div style="position: absolute; top: -50px; left: 50%; transform: translateX(-50%); width: 150px; height: 150px; background: var(--md-sys-color-primary); filter: blur(80px); opacity: 0.2;"></div>

            <div class="position-relative">
                <div class="rounded-circle bg-dark border border-2 border-info d-inline-flex align-items-center justify-content-center text-white fw-bold display-4 mb-3 shadow-lg"
                     style="width: 100px; height: 100px; font-family: 'Orbitron';">
                    @(string.IsNullOrEmpty(Model.Nombre) ? "?" : Model.Nombre.Substring(0, 1))@(string.IsNullOrEmpty(Model.Apellido) ? "?" : Model.Apellido.Substring(0, 1))
                </div>

                <h2 class="brand-font text-white mb-1">@Model.NombreCompleto</h2>
                <div class="badge rounded-pill bg-dark border border-secondary text-secondary mb-3">ID: #@Model.Id</div>

                <div class="d-flex justify-content-center gap-2 mb-4">
                    <span class="badge-neon @(Model.Estado == "Activo" ? "success" : "warning")">
                        @Model.Estado
                    </span>
                </div>

                <div class="d-grid gap-2">
                    <a asp-controller="Accesos" asp-action="Index" class="btn-md3 btn-md3-primary">
                        <i class="bi bi-qr-code me-2"></i> Registrar Acceso
                    </a>
                    <a asp-controller="Membresias" asp-action="Asignar" asp-route-socioId="@Model.Id" class="btn-md3" style="border: 1px solid rgba(255,255,255,0.2); color: #fff;">
                        <i class="bi bi-star-fill text-warning me-2"></i> Nueva Membresía
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-link text-secondary text-decoration-none">
                        <i class="bi bi-pencil me-1"></i> Editar Datos
                    </a>
                </div>
            </div>
        </div>

        <div class="glass-panel p-4">
            <h5 class="text-white brand-font mb-3 border-bottom border-secondary border-opacity-25 pb-2">Contacto</h5>
            <ul class="list-unstyled mb-0">
                <li class="mb-3 text-secondary d-flex align-items-center">
                    <div class="rounded-circle bg-dark border border-secondary d-flex align-items-center justify-content-center me-3" style="width: 32px; height: 32px;">
                        <i class="bi bi-envelope text-info"></i>
                    </div>
                    <span class="text-white">@Model.Email</span>
                </li>
                <li class="mb-3 text-secondary d-flex align-items-center">
                    <div class="rounded-circle bg-dark border border-secondary d-flex align-items-center justify-content-center me-3" style="width: 32px; height: 32px;">
                        <i class="bi bi-telephone text-info"></i>
                    </div>
                    <span class="text-white">@(Model.Telefono ?? "No registrado")</span>
                </li>
                <li class="text-secondary d-flex align-items-center">
                    <div class="rounded-circle bg-dark border border-secondary d-flex align-items-center justify-content-center me-3" style="width: 32px; height: 32px;">
                        <i class="bi bi-person-vcard text-info"></i>
                    </div>
                    <span class="text-white">@Model.Dni</span>
                </li>
            </ul>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="glass-panel h-100">
            <div class="d-flex align-items-center mb-4 pb-3 border-bottom border-secondary border-opacity-25">
                <i class="bi bi-calendar-range text-warning fs-5 me-2"></i>
                <span class="fw-bold text-uppercase text-white" style="letter-spacing: 1px;">Historial de Membresías</span>
            </div>

            @if (!Model.Membresias.Any())
            {
                <div class="text-center py-5 text-muted opacity-50">
                    <i class="bi bi-calendar-x display-1 d-block mb-3"></i>
                    <p>No hay historial de membresías.</p>
                </div>
            }
            else
            {
                <div class="timeline-cyber">
                    @foreach (var m in Model.Membresias)
                    {
                        var statusClass = m.Estado == "En Curso" ? "active" : (m.Estado == "Futura" ? "future" : "past");
                        var icon = m.Estado == "En Curso" ? "bi-check-lg" : (m.Estado == "Futura" ? "bi-clock" : "bi-archive");
                        var glowColor = m.Estado == "En Curso" ? "#0aff0a" : (m.Estado == "Futura" ? "#ffa500" : "#6c757d");

                        <div class="timeline-item @statusClass">
                            <div class="timeline-marker" style="box-shadow: 0 0 10px @glowColor; border-color: @glowColor;">
                                <i class="bi @icon" style="color: @glowColor;"></i>
                            </div>
                            <div class="timeline-content glass-panel p-3 mb-4" style="border-left: 3px solid @glowColor;">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h5 class="text-white brand-font mb-1">@m.NombrePlan</h5>
                                        <div class="text-secondary small">
                                            @m.FechaInicio.ToString("dd MMM yyyy") <i class="bi bi-arrow-right mx-1 text-info"></i> <strong class="text-white">@m.FechaFin.ToString("dd MMM yyyy")</strong>
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <span class="badge bg-dark border" style="color: @glowColor; border-color: @glowColor !important;">@m.Estado</span>
                                        <div class="mt-1 text-white fw-bold small">$@m.PrecioPagado.ToString("N0")</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
    /* Estilos para el Timeline Cyberpunk */
    .timeline-cyber {
        position: relative;
        padding-left: 20px;
        margin-left: 10px;
    }

        .timeline-cyber::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 2px;
            background: rgba(255, 255, 255, 0.1);
            box-shadow: 0 0 5px rgba(255,255,255,0.05);
        }

    .timeline-item {
        position: relative;
        padding-left: 30px;
    }

    .timeline-marker {
        position: absolute;
        left: -9px; /* Centrado en la línea de 2px */
        top: 0;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        background: #000;
        border: 2px solid;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 2;
        font-size: 10px;
    }

    .timeline-content {
        transition: transform 0.2s;
    }

    .timeline-item.active .timeline-content {
        background: rgba(10, 255, 10, 0.05); /* Sutil tinte verde */
    }
</style>