@model IEnumerable<GymSaaS.Application.Socios.Queries.GetSocios.SocioDto>

@{
    ViewData["Title"] = "Gestión de Socios";
    Layout = "~/Views/Shared/_LayoutMD3.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="brand-font m-0 text-white">Base de Socios</h2>
        <p class="text-secondary small mb-0">Administración de atletas y miembros</p>
    </div>
    <a asp-action="Create" class="btn-md3 btn-md3-primary">
        <i class="bi bi-person-plus-fill me-2"></i> Nuevo Socio
    </a>
</div>

<div class="glass-panel">
    <div class="d-flex align-items-center mb-3 pb-2 border-bottom border-secondary border-opacity-25">
        <i class="bi bi-people text-info fs-5 me-2"></i>
        <span class="fw-bold text-uppercase text-white" style="letter-spacing: 1px;">Listado de Miembros</span>
    </div>

    <div class="table-responsive">
        <table class="table-md3">
            <thead>
                <tr>
                    <th class="ps-4">Socio</th>
                    <th>DNI</th>
                    <th>Contacto</th>
                    <th>Estado</th>
                    <th class="text-end pe-4">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr class="align-middle">
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-dark border border-secondary border-opacity-50 d-flex align-items-center justify-content-center text-info fw-bold me-3 shadow-sm" style="width: 40px; height: 40px; font-size: 0.9rem;">
                                        @* CORRECCIÓN: Validación de nulos antes de Substring *@
                                        @if (!string.IsNullOrEmpty(item.Nombre) && !string.IsNullOrEmpty(item.Apellido))
                                        {
                                            @(item.Nombre.Substring(0, 1) + item.Apellido.Substring(0, 1))
                                        }
                                        else if (!string.IsNullOrEmpty(item.Nombre))
                                        {
                                            @(item.Nombre.Length > 0 ? item.Nombre.Substring(0, 1) : "?")
                                        }
                                        else
                                        {
                                            <span>?</span>
                                        }
                                    </div>
                                    <div>
                                        <div class="text-white fw-bold">@item.NombreCompleto</div>
                                        <small class="text-secondary" style="font-size: 0.75rem;">ID: @item.Id</small>
                                    </div>
                                </div>
                            </td>
                            <td class="text-white-50 font-monospace">
                                @item.Dni
                            </td>
                            <td>
                                <div class="d-flex flex-column">
                                    <span class="text-white small mb-1"><i class="bi bi-envelope me-2 text-secondary"></i>@item.Email</span>
                                    @if (!string.IsNullOrEmpty(item.Telefono))
                                    {
                                        <span class="text-secondary small"><i class="bi bi-whatsapp me-2 text-success opacity-75"></i>@item.Telefono</span>
                                    }
                                </div>
                            </td>
                            <td>
                                @if (item.Estado == "Activo")
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 rounded-pill px-3">
                                        <i class="bi bi-check-circle-fill me-1"></i> Activo
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 rounded-pill px-3">
                                        <i class="bi bi-x-circle-fill me-1"></i> Inactivo
                                    </span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info border-0 bg-info bg-opacity-10" title="Ver Perfil">
                                        <i class="bi bi-person-vcard"></i>
                                    </a>

                                    <a asp-controller="Membresias" asp-action="Asignar" asp-route-socioId="@item.Id" class="btn btn-sm btn-outline-warning border-0 bg-warning bg-opacity-10" title="Vender Plan">
                                        <i class="bi bi-currency-dollar"></i>
                                    </a>

                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-link text-secondary p-0 ms-2" type="button" data-bs-toggle="dropdown">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end shadow border-secondary">
                                            <li>
                                                <a class="dropdown-item text-white" asp-action="Edit" asp-route-id="@item.Id">
                                                    <i class="bi bi-pencil me-2"></i> Editar
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider border-secondary"></li>
                                            <li>
                                                <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                                                      onsubmit="return confirm('¿Estás seguro de eliminar este socio?');">
                                                    <button type="submit" class="dropdown-item text-danger">
                                                        <i class="bi bi-trash me-2"></i> Eliminar
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }

                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center py-5">
                            <div class="text-muted opacity-50">
                                <i class="bi bi-person-x fs-1 d-block mb-3"></i>
                                <h5 class="fw-normal brand-font">Sin socios registrados</h5>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>