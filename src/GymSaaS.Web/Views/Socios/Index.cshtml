@model IEnumerable<GymSaaS.Application.Socios.Queries.GetSocios.SocioDto>

@{
    ViewData["Title"] = "Gestión de Socios";
    Layout = "~/Views/Shared/_LayoutMD3.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-secondary small mb-0">Administración de atletas y miembros</p>
    </div>
    <a asp-action="Create" class="btn-md3 btn-md3-primary">
        <i class="bi bi-person-plus-fill me-2"></i> Nuevo Socio
    </a>
</div>

<div class="glass-panel">
    <div class="d-flex align-items-center mb-3 pb-2 border-bottom border-secondary border-opacity-25">
        <i class="bi bi-people text-info fs-5 me-2"></i>
        <span class="fw-bold text-uppercase text-white" style="letter-spacing: 1px;">Listado de Miembros</span>
    </div>

    <div class="table-responsive">
        <table class="table-md3">
            <thead>
                <tr>
                    <th class="ps-4">Socio</th>
                    <th>DNI</th>
                    <th>Contacto</th>
                    <th>Estado</th>
                    <th class="text-end pe-4">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4">
                            <div class="d-flex align-items-center gap-3">
                                <div class="rounded-circle bg-dark border border-secondary d-flex align-items-center justify-content-center text-white fw-bold"
                                     style="width: 40px; height: 40px; font-family: 'Orbitron'; box-shadow: 0 0 10px rgba(0,243,255,0.1);">
                                    @item.NombreCompleto.Substring(0, 1)
                                </div>
                                <div>
                                    <span class="d-block fw-bold text-white">@item.NombreCompleto</span>
                                    <small class="text-muted" style="font-size: 0.75rem;">ID: #@item.Id</small>
                                </div>
                            </div>
                        </td>
                        <td class="text-secondary fw-bold">
                            @item.Dni
                        </td>
                        <td>
                            <div class="d-flex flex-column">
                                <span class="text-secondary small"><i class="bi bi-envelope me-1"></i> @item.Email</span>
                                @if (!string.IsNullOrEmpty(item.UltimoAcceso))
                                {
                                    <span class="text-success small" style="font-size: 0.7rem;">
                                        <i class="bi bi-clock-history me-1"></i> @item.UltimoAcceso
                                    </span>
                                }
                            </div>
                        </td>
                        <td>
                            @if (item.Estado == "Activo")
                            {
                                <span class="badge-neon success">Activo</span>
                            }
                            else
                            {
                                <span class="badge-neon warning">Inactivo</span>
                            }
                        </td>
                        <td class="text-end pe-4">
                            <div class="d-flex justify-content-end gap-2">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn-md3-icon text-info" title="Ver Perfil">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a asp-controller="Membresias" asp-action="Asignar" asp-route-socioId="@item.Id" class="btn-md3-icon text-success" title="Vender Plan">
                                    <i class="bi bi-currency-dollar"></i>
                                </a>
                                <div class="dropdown">
                                    <button class="btn-md3-icon text-secondary" data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-dark border-secondary shadow-lg">
                                        <li>
                                            <a class="dropdown-item text-white" asp-action="Edit" asp-route-id="@item.Id">
                                                <i class="bi bi-pencil me-2"></i> Editar
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider border-secondary"></li>
                                        <li>
                                            <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id">
                                                <i class="bi bi-trash me-2"></i> Eliminar
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center py-5">
                            <div class="text-muted opacity-50">
                                <i class="bi bi-person-x fs-1 d-block mb-3"></i>
                                <h5 class="fw-normal brand-font">Sin socios registrados</h5>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>