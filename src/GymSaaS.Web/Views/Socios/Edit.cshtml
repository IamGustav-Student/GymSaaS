@model GymSaaS.Application.Socios.Commands.UpdateSocio.UpdateSocioCommand

@{
    ViewData["Title"] = "Editar Socio";
    Layout = "~/Views/Shared/_LayoutMD3.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

        <div class="d-flex align-items-center mb-4">
            <a asp-action="Index" class="btn-md3-icon me-3 text-decoration-none">
                <i class="bi bi-arrow-left"></i>
            </a>
            <h2 class="brand-font m-0 text-white">Editar Socio</h2>
        </div>

        <div class="glass-panel">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger bg-danger bg-opacity-10 border-danger text-danger rounded-3 mb-4 small"></div>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label asp-for="Nombre" class="form-label text-secondary small text-uppercase fw-bold">Nombre</label>
                        <input asp-for="Nombre" class="form-control bg-dark border-secondary text-white" />
                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Apellido" class="form-label text-secondary small text-uppercase fw-bold">Apellido</label>
                        <input asp-for="Apellido" class="form-control bg-dark border-secondary text-white" />
                        <span asp-validation-for="Apellido" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label text-secondary small text-uppercase fw-bold">Correo Electrónico</label>
                        <input asp-for="Email" type="email" class="form-control bg-dark border-secondary text-white" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Telefono" class="form-label text-secondary small text-uppercase fw-bold">Teléfono</label>
                        <input asp-for="Telefono" class="form-control bg-dark border-secondary text-white" />
                        <span asp-validation-for="Telefono" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-grid gap-3 pt-3 border-top border-secondary border-opacity-25">
                    <button type="submit" class="btn-md3 btn-md3-primary py-3">
                        <i class="bi bi-check-circle me-2"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}