@model GymSaaS.Domain.Entities.ConfiguracionPago

@{
    ViewData["Title"] = "Configurar Pagos";
    Layout = "~/Views/Shared/_LayoutMD3.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

        <div class="d-flex align-items-center mb-4">
            <div class="rounded-circle bg-dark border border-info d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px; box-shadow: 0 0 15px rgba(0,243,255,0.2);">
                <i class="bi bi-credit-card-2-front-fill text-info fs-4"></i>
            </div>
            <div>
                <p class="text-secondary small mb-0">Integración con MercadoPago</p>
            </div>
        </div>

        <div class="glass-panel position-relative overflow-hidden">
            <div style="position: absolute; top: -50px; right: -50px; width: 150px; height: 150px; background: var(--md-sys-color-primary); filter: blur(80px); opacity: 0.1;"></div>

            <div class="p-2">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success bg-success bg-opacity-10 border-success text-success rounded-3 mb-4 d-flex align-items-center">
                        <i class="bi bi-check-circle-fill me-2 fs-5"></i>
                        <div>@TempData["SuccessMessage"]</div>
                    </div>
                }

                <div class="d-flex align-items-start gap-3 mb-4 p-3 rounded-3 border border-secondary border-opacity-25" style="background: rgba(255,255,255,0.02);">
                    <i class="bi bi-info-circle text-info fs-4 mt-1"></i>
                    <div class="small text-secondary">
                        Para recibir los pagos de tus alumnos directamente, ingresa tus credenciales de <strong>Producción</strong>.
                        <div class="mt-2">
                            <a href="https://www.mercadopago.com.ar/developers/panel" target="_blank" class="text-info text-decoration-none fw-bold hover-glow">
                                <i class="bi bi-box-arrow-up-right me-1"></i> Obtener mis credenciales
                            </a>
                        </div>
                    </div>
                </div>

                <form asp-action="Pagos" method="post">

                    <div class="mb-4">
                        <label asp-for="AccessToken" class="form-label text-secondary small text-uppercase fw-bold">Access Token (Producción)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-secondary"><i class="bi bi-key-fill"></i></span>
                            <input asp-for="AccessToken" class="form-control bg-dark border-secondary text-white font-monospace" placeholder="APP_USR-xxxxxxxxxxxx..." required />
                        </div>
                        <small class="text-muted d-block mt-1" style="font-size: 0.75rem;">Debe comenzar con "APP_USR-..."</small>
                    </div>

                    <div class="mb-5">
                        <label asp-for="PublicKey" class="form-label text-secondary small text-uppercase fw-bold">Public Key (Producción)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-secondary"><i class="bi bi-globe"></i></span>
                            <input asp-for="PublicKey" class="form-control bg-dark border-secondary text-white font-monospace" placeholder="APP_USR-xxxxxxxx-xxxx..." />
                        </div>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn-md3 btn-md3-primary py-3">
                            <i class="bi bi-save me-2"></i> GUARDAR CONFIGURACIÓN
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}