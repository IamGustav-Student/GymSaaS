@model GymSaaS.Domain.Entities.ConfiguracionPago

@{
    ViewData["Title"] = "Configurar Pagos";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold text-primary"><i class="bi bi-wallet2 me-2"></i> Conectar MercadoPago</h5>
                </div>
                <div class="card-body p-4">

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }

                    <p class="text-muted mb-4">
                        Para recibir los pagos de tus alumnos directamente en tu cuenta, ingresa tus credenciales de producción.
                        <a href="https://www.mercadopago.com.ar/developers/panel" target="_blank" class="fw-bold">Obtener mis credenciales aquí</a>.
                    </p>

                    <form asp-action="Pagos" method="post">

                        <div class="mb-4">
                            <label class="form-label fw-bold">Access Token (Producción)</label>
                            <input asp-for="AccessToken" class="form-control form-control-lg" placeholder="APP_USR-xxxxxxxxxxxx..." required />
                            <small class="text-muted">Empieza con "APP_USR-..."</small>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Public Key (Producción)</label>
                            <input asp-for="PublicKey" class="form-control" placeholder="APP_USR-xxxxxxxx-xxxx..." />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold">
                                <i class="bi bi-save me-2"></i> GUARDAR CONFIGURACIÓN
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>