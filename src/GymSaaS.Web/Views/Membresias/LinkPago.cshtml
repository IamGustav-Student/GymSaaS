@model int

@{
    ViewData["Title"] = "Confirmar Pago";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Confirmar Pago con MercadoPago</h6>
            </div>
            <div class="card-body">
                <i class="bi bi-credit-card-2-front text-primary" style="font-size: 4rem;"></i>

                <h4 class="mt-3">Está a punto de generar un link de pago</h4>
                <p class="text-muted">El sistema buscará el monto y los datos del socio automáticamente.</p>

                <form asp-action="GenerarLink" method="post" class="mt-4">
                    <input type="hidden" name="membresiaId" value="@Model" />

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            Generar Link y Pagar
                        </button>
                        <a asp-controller="Socios" asp-action="Index" class="btn btn-link text-secondary">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>