@model int

@{
    ViewData["Title"] = "Confirmar Pago";
    Layout = "~/Views/Shared/_LayoutMD3.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5 text-center">

        <div class="glass-panel p-5 mt-5">
            <div class="mb-4">
                <div class="rounded-circle bg-dark border border-info d-inline-flex align-items-center justify-content-center" style="width: 100px; height: 100px; box-shadow: 0 0 30px rgba(0, 243, 255, 0.3);">
                    <i class="bi bi-qr-code text-info" style="font-size: 3rem;"></i>
                </div>
            </div>

            <h3 class="text-white brand-font mb-3">Generar Link de Pago</h3>
            <p class="text-secondary mb-4">Se creará un enlace de MercadoPago para enviar al cliente. El sistema buscará el monto y los datos automáticamente.</p>

            <form asp-action="GenerarLink" method="post">
                <input type="hidden" name="membresiaId" value="@Model" />

                <div class="d-grid gap-3">
                    <button type="submit" class="btn-md3 btn-md3-primary py-3 fs-6">
                        <i class="bi bi-link-45deg me-2"></i> GENERAR Y ENVIAR
                    </button>
                    <a asp-controller="Socios" asp-action="Index" class="btn btn-link text-secondary text-decoration-none">
                        Cancelar Operación
                    </a>
                </div>
            </form>
        </div>

    </div>
</div>