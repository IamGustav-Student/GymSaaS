@model GymSaaS.Application.Membresias.Commands.AsignarMembresia.AsignarMembresiaCommand

@{
    ViewData["Title"] = "Vender Membresía";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow mb-4 border-bottom-success">
            <div class="card-header py-3 bg-white border-bottom-0">
                <h6 class="m-0 font-weight-bold text-success">
                    <i class="bi bi-shop"></i> Registrar Venta / Asignar Plan
                </h6>
            </div>
            <div class="card-body">
                <form asp-action="Asignar" method="post">

                    <input type="hidden" asp-for="SocioId" value="@ViewBag.SocioId" />

                    <div class="text-center mb-4">
                        <i class="bi bi-cart-plus text-success" style="font-size: 3rem;"></i>
                        <p class="text-muted small mt-2">Seleccione el plan que desea vender</p>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger text-small" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="TipoMembresiaId" class="form-label fw-bold">Plan a Vender</label>
                        <select asp-for="TipoMembresiaId" class="form-select form-select-lg shadow-sm" asp-items="ViewBag.Planes" required>
                            <option value="">-- Seleccione una opción --</option>
                        </select>
                        <span asp-validation-for="TipoMembresiaId" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="MetodoPago" class="form-label fw-bold">Método de Pago</label>
                        <select asp-for="MetodoPago" class="form-select shadow-sm">
                            <option value="MercadoPago" selected>MercadoPago (Generar Link)</option>
                            <option value="Efectivo">Efectivo (Caja)</option>
                            <option value="Transferencia">Transferencia</option>
                        </select>
                        <span asp-validation-for="MetodoPago" class="text-danger small"></span>
                    </div>

                    <hr />

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg fw-bold">
                            Continuar <i class="bi bi-arrow-right"></i>
                        </button>
                        <a asp-controller="Socios" asp-action="Index" class="btn btn-outline-secondary">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}