@model GymSaaS.Application.Membresias.Commands.AsignarMembresia.AsignarMembresiaCommand

@{
    ViewData["Title"] = "Asignar Membresía";
    Layout = "~/Views/Shared/_LayoutMD3.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">

        <div class="d-flex align-items-center mb-4">
            <a asp-controller="Dashboard" asp-action="Index" class="btn-md3-icon me-3 text-decoration-none">
                <i class="bi bi-arrow-left"></i>
            </a>
            <h2 class="brand-font m-0 text-white">Nueva Venta</h2>
        </div>

        <div class="glass-panel position-relative overflow-hidden">
            <div style="position: absolute; top: -10%; right: -10%; width: 200px; height: 200px; background: var(--md-sys-color-tertiary); filter: blur(90px); opacity: 0.1;"></div>

            <div class="p-2">
                <form asp-action="Asignar" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger bg-danger bg-opacity-10 border-danger text-danger rounded-3 mb-4" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="SocioId" class="form-label text-white-50 small text-uppercase brand-font">Seleccionar Socio</label>
                        <select asp-for="SocioId" class="form-select bg-dark text-white border-secondary rounded-3 p-3" asp-items="ViewBag.Socios">
                            <option value="">-- Seleccione un Socio --</option>
                        </select>
                        <span asp-validation-for="SocioId" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="TipoMembresiaId" class="form-label text-white-50 small text-uppercase brand-font">Plan de Membresía</label>
                        <select asp-for="TipoMembresiaId" class="form-select bg-dark text-white border-secondary rounded-3 p-3" asp-items="ViewBag.Planes">
                            <option value="">-- Seleccione un Plan --</option>
                        </select>
                        <span asp-validation-for="TipoMembresiaId" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label text-white-50 small text-uppercase brand-font d-block mb-3">Método de Pago</label>
                        <div class="d-flex gap-3">
                            <div class="flex-fill">
                                <input type="radio" class="btn-check" name="MetodoPago" id="pagoEfectivo" value="Efectivo" checked asp-for="MetodoPago">
                                <label class="btn btn-outline-info w-100 py-3 rounded-3" for="pagoEfectivo">
                                    <i class="bi bi-cash-coin me-2"></i> Efectivo
                                </label>
                            </div>
                            <div class="flex-fill">
                                <input type="radio" class="btn-check" name="MetodoPago" id="pagoDigital" value="MercadoPago" asp-for="MetodoPago">
                                <label class="btn btn-outline-info w-100 py-3 rounded-3" for="pagoDigital">
                                    <i class="bi bi-credit-card-2-back me-2"></i> Digital
                                </label>
                            </div>
                        </div>
                    </div>

                    <div id="infoPago" class="alert bg-success bg-opacity-10 border-success text-success d-flex align-items-center rounded-3 mb-4">
                        <i class="bi bi-check-circle-fill me-3 fs-4"></i>
                        <span class="small">El pago se registrará y la membresía se activará <b>inmediatamente</b>.</span>
                    </div>

                    <div class="d-grid gap-3 mt-4">
                        <button type="submit" class="btn-md3 btn-md3-primary py-3">
                            CONFIRMAR VENTA <i class="bi bi-arrow-right ms-2"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.querySelectorAll('input[name="MetodoPago"]').forEach((elem) => {
            elem.addEventListener("change", function(event) {
                var info = document.getElementById("infoPago");
                if (event.target.value === "Efectivo") {
                    info.innerHTML = '<i class="bi bi-check-circle-fill me-3 fs-4"></i><span class="small">El pago se registrará y la membresía se activará <b>inmediatamente</b>.</span>';
                    info.className = "alert bg-success bg-opacity-10 border-success text-success d-flex align-items-center rounded-3 mb-4";
                } else {
                    info.innerHTML = '<i class="bi bi-info-circle-fill me-3 fs-4"></i><span class="small">Se generará un link de pago para compartir por WhatsApp/Email.</span>';
                    info.className = "alert bg-info bg-opacity-10 border-info text-info d-flex align-items-center rounded-3 mb-4";
                }
            });
        });
    </script>
}