@model List<GymSaaS.Application.Membresias.Queries.GetTiposMembresia.TipoMembresiaDto>

@{
    ViewData["Title"] = "Planes de Membresía";
    Layout = "~/Views/Shared/_LayoutMD3.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="brand-font m-0 text-white">Catálogo de Planes</h2>
        <p class="text-secondary small mb-0">Define las suscripciones disponibles</p>
    </div>
    <a asp-action="Create" class="btn-md3 btn-md3-primary">
        <i class="bi bi-plus-lg me-1"></i> Nuevo Plan
    </a>
</div>

<div class="row g-4">
    @if (Model != null && Model.Any())
    {
        @foreach (var plan in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="glass-panel h-100 position-relative overflow-hidden p-4 d-flex flex-column justify-content-between transition-hover">
                    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 4px; background: var(--md-sys-color-primary);"></div>

                    <div>
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h4 class="text-white brand-font mb-1">@plan.Nombre</h4>
                                <span class="badge bg-dark border border-info text-info rounded-pill px-3">
                                    @plan.DuracionDias días
                                </span>
                            </div>

                            <div class="dropdown">
                                <button class="btn btn-link text-secondary p-0" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-dark border-secondary shadow">
                                    <li>
                                        <a asp-action="Edit" asp-route-id="@plan.Id" class="dropdown-item text-info">
                                            <i class="bi bi-pencil me-2"></i> Editar
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider bg-secondary"></li>
                                    <li>
                                        <form asp-action="Delete" asp-route-id="@plan.Id" method="post"
                                              onsubmit="return confirm('¿Estás seguro de eliminar este plan? No se podrá recuperar.');">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-trash me-2"></i> Eliminar
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="d-flex align-items-center mb-3">
                            @if (plan.CantidadClases.HasValue)
                            {
                                <div class="d-flex align-items-center text-secondary me-3">
                                    <div class="rounded-circle bg-dark p-2 me-2 border border-secondary border-opacity-25">
                                        <i class="bi bi-collection-play-fill text-info"></i>
                                    </div>
                                    <span class="fw-bold">@plan.CantidadClases Clases</span>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center text-secondary">
                                    <div class="rounded-circle bg-dark p-2 me-2 border border-secondary border-opacity-25">
                                        <i class="bi bi-infinity text-warning"></i>
                                    </div>
                                    <span class="fw-bold">Pase Libre</span>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="pt-3 border-top border-secondary border-opacity-25 mt-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-secondary small text-uppercase">Precio Final</span>
                            <span class="fs-3 fw-bold text-white brand-font">$@plan.Precio.ToString("N0")</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="glass-panel text-center py-5">
                <i class="bi bi-journal-x fs-1 text-secondary opacity-50 d-block mb-3"></i>
                <h5 class="text-white">No hay planes configurados</h5>
                <p class="text-secondary mb-4">Comienza creando tu primera opción de suscripción.</p>
                <a asp-action="Create" class="btn-md3 btn-md3-primary">
                    Crear Primer Plan
                </a>
            </div>
        </div>
    }
</div>

<style>
    .transition-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 243, 255, 0.15);
    }

    .transition-hover {
        transition: all 0.3s ease;
    }
</style>