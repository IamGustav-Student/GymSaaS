@using System.Globalization
@model GymSaaS.Application.Dashboard.Queries.GetDashboardStats.DashboardStatsDto

@{
    Layout = null; // No usamos el layout principal aquí
    ViewData["Title"] = "Bienvenido a Gymvo";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"]</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <style>
        /* =========================================
           ESTILOS BASE (Idénticos al Login)
           ========================================= */
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background-image: url('https://images.unsplash.com/photo-1534438327276-14e5300c3a48?auto=format&fit=crop&w=1080&q=80');

        }

        .welcome-container {
            height: 100%;
            width: 100%;
            /* Imagen de fondo de gimnasio con overlay oscuro */
            background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.7)) ;
            background-size: cover;
            background-position: center;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            color: white;
            position: relative;
        }

        /* Marca (Arriba) */
        .brand-header {
            padding: 5rem 1.5rem 2rem;
            text-align: center;
            position: relative;
            z-index: 2;
        }

        .brand-title {
            font-size: 5rem;
            font-weight: 800;
            margin-bottom: 0.2rem;
            letter-spacing: -2px;
            text-shadow: 0 4px 10px rgba(0,0,0,0.3);
        }

        /* Sección Curva Inferior */
        .welcome-actions-section {
            width:100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.05); /* Translúcido */
            backdrop-filter: blur(15px);
            -webkit-backdrop-filter: blur(15px);
            border-top-left-radius: 50px;
            border-top-right-radius: 50px;
            padding: 3rem 2rem 5rem;
            text-align: center;
            position: relative;
            z-index: 2;
            box-shadow: 0 -10px 40px rgba(0,0,0,0.2);
            

            justify-content: center;
            
        }
           
        
        .welcome-title {
            font-size: 2.5rem;
            font-weight: 900;
            margin-bottom: 2.5rem;
            color: black;
            letter-spacing: -0.5px;
        }

        /* Estilo de los Botones Negros Gigantes */
        .btn-welcome {
            justify-content: center;
            background-color: black;
            color: white;
            border: none;
            border-radius: 50px;
            padding: 1.2rem 2rem;
            font-size: 1.3rem;
            font-weight: 800;
            width: 80%;
            text-transform: uppercase;
            margin-bottom: 1.2rem; /* Espacio entre botones */
            letter-spacing: 1px;
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
            transition: transform 0.1s, box-shadow 0.1s;
            display: block; /* Para que ocupen todo el ancho */
            text-decoration: none; /* Quitar subrayado de los links */
            
            
        }
        .btn-welcome:hover {
            color: white;
            box-shadow: 0 15px 25px rgba(0,0,0,0.2);
        }
        .btn-welcome:active {
            transform: scale(0.98);
            box-shadow: 0 5px 10px rgba(0,0,0,0.1);
        }

        /* ESTILOS ESCRITORIO (Misma tarjeta flotante que el login) */
        @@media (min-width: 992px) {
            body {
                background-image: url('https://images.unsplash.com/photo-1534438327276-14e5300c3a48?auto=format&fit=crop&w=1080&q=80');
                background-repeat: no-repeat;
                background-size: cover;
                display: flex;
                align-items: center;
                justify-content: center;
                min-height: 100vh;
            }

            .welcome-container {
                width: 80%;
                height: auto;
                min-height: 800px;
                max-height: 100%;
                border-radius: 25px;
                overflow: hidden;
                box-shadow: 0 50px 100px -20px rgba(0,0,0,0.7);
               /*  border: 8px solid #2a2a2a; */
                margin: auto;
            }
            /* .brand-header { 
                padding-top: 6rem;
                
            } */
        }
    </style>
</head>
<body>
    <div class="welcome-container">
        
        @* <div class="brand-header">
            <h1 class="brand-title">Gymvo</h1>
        </div> *@

        <div class="welcome-actions-section">

            <h1 class="brand-title">Gymvo</h1>
            <h2 class="welcome-title">Bienvenido</h2>

            <div class="d-grid gap-3">
                <a asp-controller="Auth" asp-action="Login" class="btn btn-welcome">
                    Acceso Coach
                </a>

                <a asp-controller="Portal" asp-action="Login" class="btn btn-welcome">
                    Acceso Socios
                </a>
                
                <a asp-controller="Auth" asp-action="Register" class="btn btn-welcome">
                    Registrar Gimnasio
                </a>
            </div>

        </div>

    </div>
</body>
</html>