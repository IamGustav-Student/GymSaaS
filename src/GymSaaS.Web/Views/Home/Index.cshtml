@{
    Layout = null; // Pantalla full-screen independiente
    ViewData["Title"] = "Bienvenido a Gymvo";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/gymvo-cyberpunk.css" asp-append-version="true" />
    <link rel="manifest" href="~/manifest.json" />
    <meta name="theme-color" content="#00f3ff" />
    <link rel="apple-touch-icon" href="~/favicon.ico">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        /* Estilos específicos para esta Landing Page */
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            overflow: hidden;
            /* Fondo de imagen opcional con superposición oscura */
            background: linear-gradient(rgba(5, 5, 5, 0.85), rgba(5, 5, 5, 0.95)), url('https://images.unsplash.com/photo-1534438327276-14e5300c3a48?auto=format&fit=crop&w=1920&q=80');
            background-size: cover;
            background-position: center;
        }

        .landing-card {
            width: 100%;
            max-width: 420px;
            padding: 2rem;
            text-align: center;
            position: relative;
            z-index: 10;
        }

        /* Efecto de resplandor trasero */
        .glow-effect {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 300px;
            height: 300px;
            background: var(--md-sys-color-primary);
            filter: blur(150px);
            opacity: 0.15;
            z-index: -1;
            border-radius: 50%;
        }

        .btn-landing {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.2rem 1.5rem;
            margin-bottom: 1rem;
            text-decoration: none;
            color: #fff;
            border: 1px solid rgba(255, 255, 255, 0.1);
            background: rgba(255, 255, 255, 0.03);
            border-radius: 16px;
            transition: all 0.3s ease;
            backdrop-filter: blur(5px);
        }

            .btn-landing:hover {
                border-color: var(--md-sys-color-primary);
                background: rgba(0, 243, 255, 0.1);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
                color: #fff;
            }

            .btn-landing i {
                font-size: 1.5rem;
                color: var(--md-sys-color-primary);
            }
    </style>
</head>
<body>

    <div class="glow-effect"></div>

    <div class="landing-card glass-panel fade-in-up">

        <div class="mb-5">
            <i class="bi bi-cpu-fill text-info display-1" style="filter: drop-shadow(0 0 10px cyan);"></i>
            <h1 class="brand-font text-white mt-2" style="font-size: 3.5rem; letter-spacing: -2px;">GYMVO</h1>
            <p class="text-secondary text-uppercase" style="letter-spacing: 2px; font-size: 0.8rem;">El sistema de los campeones</p>
        </div>

        <h5 class="text-white mb-4 brand-font" style="opacity: 0.8;">SELECCIONA TU PERFIL</h5>

        <div class="d-grid gap-2">
            <a asp-controller="Auth" asp-action="Login" class="btn-landing">
                <div class="text-start">
                    <span class="d-block fw-bold brand-font fs-5">ADMINISTRACIÓN</span>
                    <small class="text-secondary" style="font-size: 0.75rem;">Dueños y Entrenadores</small>
                </div>
                <i class="bi bi-shield-lock"></i>
            </a>

            <a asp-controller="Portal" asp-action="Login" class="btn-landing">
                <div class="text-start">
                    <span class="d-block fw-bold brand-font fs-5">PORTAL ALUMNO</span>
                    <small class="text-secondary" style="font-size: 0.75rem;">Socios y Atletas</small>
                </div>
                <i class="bi bi-phone"></i>
            </a>
        </div>

        <div class="mt-5 pt-4 border-top border-secondary border-opacity-25">
            <p class="text-secondary small mb-3">¿Tienes un gimnasio y quieres modernizarte?</p>
            <a asp-controller="Auth" asp-action="Register" class="btn-md3 btn-md3-primary w-100 py-3">
                REGISTRAR MI GIMNASIO
            </a>
        </div>

    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js')
                    .then(reg => console.log('✅ PWA SW Registrado en Landing'))
                    .catch(err => console.error('❌ Error SW Landing:', err));
            });
        }
    </script>

    <style>
        /* Animación simple de entrada */
        .fade-in-up {
            animation: fadeInUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</body>
</html>