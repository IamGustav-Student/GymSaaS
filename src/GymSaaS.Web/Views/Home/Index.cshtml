@using System.Globalization
@model GymSaaS.Application.Dashboard.Queries.GetDashboardStats.DashboardStatsDto

@{
    ViewData["Title"] = "Dashboard";
}

<div class="p-5 mb-4 bg-dark text-white rounded-3 shadow position-relative overflow-hidden" style="background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('https://images.unsplash.com/photo-1534438327276-14e5300c3a48?auto=format&fit=crop&q=80') no-repeat center center; background-size: cover;">
    <div class="container-fluid py-5 position-relative" style="z-index: 2;">
        <h1 class="display-4 fw-bold">Panel de Control</h1>
        <p class="col-md-8 fs-4">Bienvenido a la administración central de tu gimnasio. Aquí tienes el pulso de tu negocio en tiempo real.</p>
        <div class="mt-4">
            <a asp-controller="Accesos" asp-action="Index" class="btn btn-success btn-lg px-4 me-2 shadow-sm fw-bold">
                <i class="bi bi-qr-code-scan me-2"></i> MONITOR ACCESO
            </a>
            <a asp-controller="Membresias" asp-action="Asignar" class="btn btn-outline-light btn-lg px-4 fw-bold">
                <i class="bi bi-currency-dollar me-2"></i> VENTA RÁPIDA
            </a>
        </div>
    </div>
</div>

<div class="row g-4 mb-5">

    <div class="col-md-3">
        <div class="card h-100 border-0 shadow-sm hover-card border-start border-4 border-success">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h6 class="text-uppercase text-muted fw-bold mb-0 small">Ingresos (Mes)</h6>
                    <div class="icon-shape bg-success-subtle text-success rounded-circle p-2">
                        <i class="bi bi-cash-stack fs-4"></i>
                    </div>
                </div>
                <h2 class="display-6 fw-bold text-dark mb-0">
                    $ @Model.IngresosMensuales.ToString("N0", new CultureInfo("es-AR"))
                </h2>
                <small class="text-success fw-bold"><i class="bi bi-graph-up-arrow"></i> Auditado</small>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card h-100 border-0 shadow-sm hover-card border-start border-4 border-primary">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h6 class="text-uppercase text-muted fw-bold mb-0 small">Socios Activos</h6>
                    <div class="icon-shape bg-primary-subtle text-primary rounded-circle p-2">
                        <i class="bi bi-people-fill fs-4"></i>
                    </div>
                </div>
                <h2 class="display-6 fw-bold text-dark mb-0">@Model.SociosActivos</h2>
                <small class="text-muted">Miembros habilitados</small>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card h-100 border-0 shadow-sm hover-card border-start border-4 border-info">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h6 class="text-uppercase text-muted fw-bold mb-0 small">Ventas Nuevas</h6>
                    <div class="icon-shape bg-info-subtle text-info rounded-circle p-2">
                        <i class="bi bi-bag-check-fill fs-4"></i>
                    </div>
                </div>
                <h2 class="display-6 fw-bold text-dark mb-0">@Model.NuevasMembresias</h2>
                <small class="text-muted">Planes vendidos este mes</small>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card h-100 border-0 shadow-sm hover-card border-start border-4 border-warning">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h6 class="text-uppercase text-muted fw-bold mb-0 small">Accesos Hoy</h6>
                    <div class="icon-shape bg-warning-subtle text-warning rounded-circle p-2">
                        <i class="bi bi-lightning-charge-fill fs-4"></i>
                    </div>
                </div>
                <h2 class="display-6 fw-bold text-dark mb-0">@Model.AccesosHoy</h2>
                <small class="text-muted">Visitas registradas hoy</small>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <h5 class="fw-bold text-secondary mb-3">Gestión Rápida</h5>
    </div>
    <div class="col-md-4 mb-3">
        <a asp-controller="Socios" asp-action="Create" class="card card-link border-0 shadow-sm h-100 text-decoration-none">
            <div class="card-body d-flex align-items-center p-4">
                <div class="bg-primary text-white rounded-3 p-3 me-3">
                    <i class="bi bi-person-plus-fill fs-3"></i>
                </div>
                <div>
                    <h5 class="fw-bold text-dark mb-1">Nuevo Socio</h5>
                    <p class="text-muted small mb-0">Dar de alta un nuevo miembro.</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4 mb-3">
        <a asp-controller="Membresias" asp-action="Index" class="card card-link border-0 shadow-sm h-100 text-decoration-none">
            <div class="card-body d-flex align-items-center p-4">
                <div class="bg-dark text-white rounded-3 p-3 me-3">
                    <i class="bi bi-tags-fill fs-3"></i>
                </div>
                <div>
                    <h5 class="fw-bold text-dark mb-1">Configurar Planes</h5>
                    <p class="text-muted small mb-0">Crear o editar tipos de membresía.</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4 mb-3">
        <a asp-controller="Pagos" asp-action="Index" class="card card-link border-0 shadow-sm h-100 text-decoration-none">
            <div class="card-body d-flex align-items-center p-4">
                <div class="bg-success text-white rounded-3 p-3 me-3">
                    <i class="bi bi-journal-text fs-3"></i>
                </div>
                <div>
                    <h5 class="fw-bold text-dark mb-1">Ver Caja</h5>
                    <p class="text-muted small mb-0">Historial detallado de ingresos.</p>
                </div>
            </div>
        </a>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }

    .card-link:hover {
        background-color: #f8f9fa;
    }

    .icon-shape {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>