@{
    Layout = null; // Sin layout, es una pantalla full-screen única
    ViewData["Title"] = "Bienvenido a Gymvo";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body, html {
            height: 100%;
            margin: 0;
            background-color: #000;
            font-family: system-ui, sans-serif;
        }

        .hero-container {
            height: 100%;
            width: 100%;
            /* Imagen de fondo */
            background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,0.9)), url('https://images.unsplash.com/photo-1534438327276-14e5300c3a48?auto=format&fit=crop&w=1080&q=80');
            background-size: cover;
            background-position: center;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .brand-section {
            padding: 4rem 2rem;
            text-align: center;
        }

        .brand-logo {
            font-size: 4.5rem;
            font-weight: 900;
            color: white;
            letter-spacing: -2px;
            margin: 0;
        }

        .brand-tag {
            color: rgba(255,255,255,0.7);
            font-size: 1.1rem;
            letter-spacing: 1px;
        }

        .actions-section {
            background: rgba(255,255,255,0.1);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-top-left-radius: 40px;
            border-top-right-radius: 40px;
            padding: 3rem 2rem 5rem;
            text-align: center;
        }

        .action-btn {
            display: block;
            width: 100%;
            background: white;
            color: black;
            font-weight: 800;
            text-transform: uppercase;
            padding: 1.2rem;
            border-radius: 50px;
            text-decoration: none;
            margin-bottom: 1rem;
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
            transition: transform 0.1s;
        }

            .action-btn:active {
                transform: scale(0.98);
            }

            .action-btn.secondary {
                background: transparent;
                border: 2px solid rgba(255,255,255,0.3);
                color: white;
                box-shadow: none;
            }

        /* Ajuste para Desktop: Tarjeta Flotante */
        @@media (min-width: 992px) {
            body

        {
            display: flex;
            align-items: center;
            justify-content: center;
            background: #111;
        }

        .hero-container {
            width: 400px;
            height: 850px;
            max-height: 95vh;
            border-radius: 40px;
            overflow: hidden;
            border: 8px solid #222;
            box-shadow: 0 0 50px rgba(0,0,0,0.5);
        }

        }
    </style>
</head>
<body>
    <div class="hero-container">
        <div class="brand-section">
            <h1 class="brand-logo">Gymvo</h1>
            <p class="brand-tag">El sistema de los campeones</p>
        </div>
        <div class="actions-section">
            <h3 style="color:white; font-weight:800; margin-bottom: 2rem;">¿Quién eres?</h3>

            <a asp-controller="Auth" asp-action="Login" class="action-btn">
                Soy Dueño / Coach
            </a>

            <a asp-controller="Portal" asp-action="Login" class="action-btn">
                Soy Socio / Alumno
            </a>

            <div style="margin-top: 2rem; border-top: 1px solid rgba(255,255,255,0.2); padding-top: 2rem;">
                <a asp-controller="Auth" asp-action="Register" class="action-btn secondary">
                    Registrar mi Gimnasio
                </a>
            </div>
        </div>
    </div>
</body>
</html>