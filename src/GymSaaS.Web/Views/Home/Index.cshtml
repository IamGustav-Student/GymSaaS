@using GymSaaS.Application.Dashboard.Queries.GetDashboardStats
@model DashboardStatsDto

@{
    ViewData["Title"] = "Command Center";
}

<style>
    /* 1. El Banner "Hero" que pediste en el audio */
    .gym-hero {
        position: relative;
        height: 500px; /* Mucho más alto, como pediste */
        width: 100%;
        /* Imagen de fondo B&W Aesthetic (Gym Couple) */
        background-image: url('https://images.unsplash.com/photo-1534438327276-14e5300c3a48?q=80&w=1470&auto=format&fit=crop');
        background-size: cover;
        background-position: center;
        /* Truco CSS para hacerla Blanco y Negro y oscurecerla para que el texto resalte */
        filter: grayscale(100%);
        border-bottom: 5px solid #E31C25; /* Un toque de rojo "Acción" al final */
    }

    /* La capa oscura encima de la imagen para que se lea el texto */
    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.8) 100%);
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding-left: 5rem;
    }

    .hero-title {
        color: white;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: 800;
        font-size: 4rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        text-shadow: 2px 2px 10px rgba(0,0,0,0.8);
        margin-bottom: 0;
    }

    .hero-subtitle {
        color: #ddd;
        font-size: 1.5rem;
        font-weight: 300;
    }

    /* Tarjetas Flotantes (Stats) - Estilo Glassmorphism */
    .stats-container {
        margin-top: -80px; /* Para que "floten" sobre el banner */
        position: relative;
        z-index: 10;
        padding: 0 2rem;
    }

    .stat-card {
        background: white;
        border-radius: 12px;
        border-left: 5px solid #333;
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        transition: transform 0.3s ease;
        overflow: hidden;
    }

        .stat-card:hover {
            transform: translateY(-10px); /* Efecto elevación */
        }

    .stat-label {
        font-size: 0.8rem;
        text-transform: uppercase;
        color: #888;
        font-weight: 700;
        letter-spacing: 1px;
    }

    .stat-value {
        font-size: 2.5rem;
        font-weight: 800;
        color: #222;
    }

    .action-btn {
        border-radius: 50px;
        padding: 15px 30px;
        font-weight: bold;
        text-transform: uppercase;
        transition: all 0.3s;
    }

    .btn-glow-primary {
        background: #E31C25;
        color: white;
        box-shadow: 0 0 20px rgba(227, 28, 37, 0.4);
        border: none;
    }

        .btn-glow-primary:hover {
            background: #b01018;
            color: white;
            box-shadow: 0 0 30px rgba(227, 28, 37, 0.6);
        }
</style>

<div class="container-fluid p-0">
    <div class="gym-hero">
        <div class="hero-overlay">

            <div class="position-absolute top-0 end-0 p-4">
                <form asp-controller="Auth" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-outline-light rounded-pill px-4 hover-danger">
                        <i class="bi bi-power"></i> Cerrar Sesión
                    </button>
                </form>
            </div>
            <h1 class="hero-title">@Model.NombreGimnasio</h1>
            <p class="hero-subtitle">Panel de Control &bull; @DateTime.Now.ToString("dd MMMM yyyy")</p>

            <div class="mt-4">
                <a asp-controller="Accesos" asp-action="Index" class="btn btn-glow-primary action-btn me-3">
                    <i class="bi bi-qr-code-scan"></i> Control de Acceso
                </a>
                <a asp-controller="Socios" asp-action="Create" class="btn btn-light action-btn">
                    <i class="bi bi-person-plus-fill"></i> Nuevo Socio
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid stats-container">
    <div class="row g-4">

        <div class="col-xl-3 col-md-6">
            <div class="card stat-card h-100 py-3 border-left-success">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="stat-label text-success">Activos Ahora</div>
                            <div class="stat-value">@Model.SociosActivos</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-activity fs-1 text-gray-300" style="color: #ccc;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stat-card h-100 py-3" style="border-left-color: #E31C25;">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="stat-label" style="color: #E31C25;">Facturación Mes</div>
                            <div class="stat-value">$@Model.IngresosMes.ToString("N0")</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-currency-dollar fs-1" style="color: #ccc;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stat-card h-100 py-3" style="border-left-color: #f6c23e;">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="stat-label" style="color: #f6c23e;">Por Vencer</div>
                            <div class="stat-value">@Model.MembresiasVencidas</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-exclamation-triangle-fill fs-1" style="color: #ccc;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stat-card h-100 py-3" style="border-left-color: #36b9cc;">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="stat-label" style="color: #36b9cc;">Historico</div>
                            <div class="stat-value">@Model.TotalSocios</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-people-fill fs-1" style="color: #ccc;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <h4 class="text-muted mb-4 fw-bold text-uppercase">Gestión Rápida</h4>
    <div class="row">
        <div class="col-md-4">
            <a asp-controller="Membresias" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm border-0 h-100 hover-zoom">
                    <div class="card-body text-center p-4">
                        <div class="rounded-circle bg-dark text-white d-inline-flex justify-content-center align-items-center mb-3" style="width: 60px; height: 60px;">
                            <i class="bi bi-tag-fill fs-4"></i>
                        </div>
                        <h5 class="fw-bold text-dark">Planes y Precios</h5>
                        <p class="text-muted small">Configura tus ofertas</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a asp-controller="Accesos" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm border-0 h-100 hover-zoom">
                    <div class="card-body text-center p-4">
                        <div class="rounded-circle bg-success text-white d-inline-flex justify-content-center align-items-center mb-3" style="width: 60px; height: 60px;">
                            <i class="bi bi-door-open-fill fs-4"></i>
                        </div>
                        <h5 class="fw-bold text-dark">Monitor de Entrada</h5>
                        <p class="text-muted small">Pantalla de recepción</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a href="#" class="text-decoration-none">
                <div class="card shadow-sm border-0 h-100 hover-zoom">
                    <div class="card-body text-center p-4">
                        <div class="rounded-circle bg-primary text-white d-inline-flex justify-content-center align-items-center mb-3" style="width: 60px; height: 60px;">
                            <i class="bi bi-graph-up-arrow fs-4"></i>
                        </div>
                        <h5 class="fw-bold text-dark">Reportes</h5>
                        <p class="text-muted small">Próximamente</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>