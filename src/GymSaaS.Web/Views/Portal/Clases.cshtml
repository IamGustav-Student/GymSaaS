@model IEnumerable<GymSaaS.Application.Clases.Queries.GetClasesPortal.ClasePortalDto>

@{
    Layout = null;
    ViewData["Title"] = "Agenda de Clases";
    int currentSocioId = ViewBag.CurrentSocioId ?? 0;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/gymvo-cyberpunk.css" asp-append-version="true" />

    <style>
        body {
            background-color: #050505;
            min-height: 100vh;
            padding-bottom: 80px;
        }

        .header-nav {
            padding: 1.5rem;
            display: flex;
            align-items: center;
            background: rgba(5, 5, 5, 0.95);
            position: sticky;
            top: 0;
            z-index: 1000;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            backdrop-filter: blur(10px);
        }

        .clase-card {
            background: #111;
            border: 1px solid #333;
            border-radius: 12px;
            margin-bottom: 1rem;
            padding: 1rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .hora-box {
            background: #222;
            color: #fff;
            padding: 0.5rem;
            border-radius: 8px;
            text-align: center;
            min-width: 60px;
            border: 1px solid #444;
        }
    </style>
</head>
<body>

    <div class="header-nav">
        <a href="/Portal/Index" class="text-white me-3"><i class="bi bi-arrow-left fs-4"></i></a>
        <h5 class="mb-0 text-white brand-font flex-grow-1 text-center">CLASES DISPONIBLES</h5>
        <div style="width: 24px;"></div>
    </div>

    <div class="container mt-3 fade-in-up">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success border-0 bg-success bg-opacity-25 text-white mb-3">
                <i class="bi bi-check-circle me-2"></i> @TempData["Success"]
            </div>
        }
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info border-0 bg-info bg-opacity-25 text-white mb-3">
                <i class="bi bi-info-circle me-2"></i> @TempData["Info"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger border-0 bg-danger bg-opacity-25 text-white mb-3">
                <i class="bi bi-exclamation-triangle me-2"></i> @TempData["Error"]
            </div>
        }

        @foreach (var clase in Model)
        {
            <div class="clase-card">
                <div class="d-flex align-items-center">
                    <div class="hora-box me-3">
                        <div class="fw-bold">@clase.FechaHoraInicio.ToString("HH:mm")</div>
                        <small class="text-secondary" style="font-size: 0.7rem;">@clase.DuracionMinutos min</small>
                    </div>
                    <div>
                        <h6 class="mb-0 text-white fw-bold">@clase.NombreClase</h6>
                        <small class="text-secondary">@clase.Instructor</small>
                        <br />
                        @if (clase.ReservadaPorUsuario)
                        {
                            <span class="badge bg-success text-dark border border-success mt-1" style="font-size: 0.6rem;">
                                <i class="bi bi-check2"></i> INSCRITO
                            </span>
                        }
                        else if (clase.CuposDisponibles > 0)
                        {
                            <span class="badge bg-dark text-success border border-success mt-1" style="font-size: 0.6rem;">
                                @clase.CuposDisponibles lugares libres
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-dark text-warning border border-warning mt-1" style="font-size: 0.6rem;">
                                AGOTADA - LISTA DE ESPERA
                            </span>
                        }
                    </div>
                </div>

                <div>
                    @if (clase.ReservadaPorUsuario)
                    {
                        <form asp-action="CancelarReserva" method="post" onsubmit="return confirm('¿Seguro deseas cancelar? Alguien más tomará tu lugar.');">
                            <input type="hidden" name="reservaId" value="@(clase.ReservaId ?? 0)" />
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </form>
                    }
                    else if (clase.CuposDisponibles <= 0)
                    {
                        <form asp-action="UnirseListaEspera" method="post">
                            <input type="hidden" name="claseId" value="@clase.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-info text-uppercase fw-bold" style="font-size: 0.7rem;">
                                <i class="bi bi-hourglass-split"></i> Unirse
                            </button>
                        </form>
                    }
                    else
                    {
                        @if (clase.RequierePago)
                        {
                            // Lógica para clases pagas (si aplica)
                            <form asp-action="Reservar" method="post">
                                <input type="hidden" name="claseId" value="@clase.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-warning text-uppercase fw-bold">
                                    Pagar Ahora
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Reservar" method="post">
                                <input type="hidden" name="claseId" value="@clase.Id" />
                                <button type="submit" class="btn btn-sm btn-primary px-3 fw-bold shadow-sm text-uppercase">
                                    Reservar
                                </button>
                            </form>
                        }
                    }
                </div>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-calendar-x text-secondary display-1 opacity-25"></i>
                <p class="text-secondary mt-3">No hay clases programadas.</p>
            </div>
        }
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>