@using GymSaaS.Application.Portal.Queries.GetGamificationStats
@model GamificationStatsDto
@{
    Layout = null;
    ViewData["Title"] = "Mi Perfil";
    var colorNivel = Model?.ColorNivel ?? "secondary";
    var racha = Model?.RachaActual ?? 0;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Dashboard - @(Model?.NombreSocio ?? "Alumno")</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/gymvo-cyberpunk.css" asp-append-version="true" />
    <link rel="manifest" href="~/manifest.json" />
    <meta name="theme-color" content="#00f3ff" />

    <style>
        body {
            background-color: #050505;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            padding-bottom: 80px;
        }

        .hero-card {
            background: linear-gradient(135deg, rgba(20,20,20,0.9) 0%, rgba(30,30,35,0.95) 100%);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 20px;
            padding: 1.5rem;
            margin: 1rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
            position: relative;
            overflow: hidden;
        }

            .hero-card::after {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 2px;
                background: linear-gradient(90deg, transparent, #00f3ff, transparent);
                opacity: 0.7;
            }

        .streak-fire {
            font-size: 2.5rem;
            filter: drop-shadow(0 0 10px orange);
            animation: pulseFire 2s infinite;
        }

        @@keyframes pulseFire {
            0% {
                transform: scale(1);
                filter: drop-shadow(0 0 5px orange);
            }

            50% {
                transform: scale(1.1);
                filter: drop-shadow(0 0 15px orangered);
            }

            100% {
                transform: scale(1);
                filter: drop-shadow(0 0 5px orange);
            }
        }

        .level-badge {
            background: rgba(0,0,0,0.5);
            border: 1px solid var(--bs- @colorNivel );
            color: var(--bs- @colorNivel );
            padding: 5px 12px;
            border-radius: 50px;
            font-size: 0.8rem;
            text-transform: uppercase;
            font-weight: bold;
            letter-spacing: 1px;
        }

        .progress-cyber {
            height: 6px;
            background: rgba(255,255,255,0.1);
            border-radius: 3px;
            margin-top: 10px;
            overflow: hidden;
        }

        .progress-bar-cyber {
            height: 100%;
            background: var(--bs- @colorNivel );
            box-shadow: 0 0 10px var(--bs- @colorNivel );
            transition: width 1s ease-out;
        }

        .menu-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            padding: 0 1rem;
        }

        .menu-card {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            padding: 1.5rem;
            text-align: center;
            text-decoration: none;
            color: white;
            transition: all 0.2s;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            aspect-ratio: 1 / 1;
        }

            .menu-card:active {
                transform: scale(0.95);
                background: rgba(255, 255, 255, 0.1);
            }

        .menu-icon {
            font-size: 2rem;
            margin-bottom: 0.5rem;
            color: #00f3ff;
        }
    </style>
</head>
<body>

    <div class="hero-card">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="d-flex align-items-center">
                @if (!string.IsNullOrEmpty(Model?.FotoUrl))
                {
                    <img src="@Model.FotoUrl" class="rounded-circle border border-secondary me-3" width="50" height="50" style="object-fit: cover;">
                }
                else
                {
                    <div class="rounded-circle bg-dark border border-secondary me-3 d-flex align-items-center justify-content-center" style="width:50px; height:50px;">
                        <i class="bi bi-person-fill text-secondary fs-4"></i>
                    </div>
                }
                <div>
                    <h5 class="mb-0 fw-bold text-white">Hola, @Model?.NombreSocio</h5>
                    <small class="text-secondary">Nivel: @Model?.NivelActual</small>
                </div>
            </div>

            <div class="text-center">
                <div class="streak-fire">🔥</div>
                <div class="fw-bold text-warning" style="font-size: 0.9rem; margin-top: -5px;">@racha DÍAS</div>
            </div>
        </div>

        <div class="mt-3">
            <div class="d-flex justify-content-between align-items-end mb-1">
                <span class="level-badge border-@colorNivel text-@colorNivel">@Model?.NivelActual</span>
                <small class="text-secondary" style="font-size: 0.75rem;">
                    Faltan @Model?.AsistenciasParaSiguienteNivel entrenamientos
                </small>
            </div>
            <div class="progress-cyber">
                <div class="progress-bar-cyber bg-@colorNivel" style="width: @(Model?.PorcentajeProgreso ?? 0)%"></div>
            </div>
            <div class="text-end mt-1">
                <small class="text-white-50" style="font-size: 0.7rem;">Total: @Model?.TotalAsistencias</small>
            </div>
        </div>
    </div>

    <div class="menu-grid">
        <a asp-action="Escanear" class="menu-card">
            <i class="bi bi-qr-code-scan menu-icon text-white"></i>
            <span class="fw-bold small text-uppercase">Escanear</span>
        </a>

        <a asp-action="Clases" class="menu-card">
            <i class="bi bi-calendar-check menu-icon text-warning"></i>
            <span class="fw-bold small text-uppercase">Reservar</span>
        </a>

        <a asp-action="MisRutinas" asp-controller="Portal" class="menu-card">
            <i class="bi bi-journal-medical menu-icon text-info"></i>
            <span class="fw-bold small text-uppercase">Rutina</span>
        </a>

        <a asp-action="Renovar" class="menu-card" style="border-color: rgba(0, 255, 0, 0.2);">
            <i class="bi bi-credit-card-2-front menu-icon text-success"></i>
            <span class="fw-bold small text-uppercase">Pagar</span>
        </a>
    </div>

    <div class="text-center mt-4">
        <form asp-action="Logout" asp-controller="Portal" method="post" id="logoutForm">
            <a href="#" onclick="document.getElementById('logoutForm').submit(); return false;" class="text-secondary text-decoration-none small opacity-50">
                <i class="bi bi-box-arrow-left me-1"></i> Cerrar Sesión
            </a>
        </form>
    </div>

    <script>
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('/sw.js');
        }
    </script>
</body>
</html>