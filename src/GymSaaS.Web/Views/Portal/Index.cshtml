@model GymSaaS.Domain.Entities.Socio
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mi Perfil</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">

    <nav class="navbar navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1 fw-bold"><i class="bi bi-gem me-2"></i>Mi Gimnasio</span>
            <a asp-action="Logout" class="btn btn-sm btn-light text-primary fw-bold">Salir</a>
        </div>
    </nav>

    <div class="container py-4">

        <div class="card shadow border-0 mb-4 text-center">
            <div class="card-body p-4">
                <div class="mb-3">
                    <div class="d-inline-flex align-items-center justify-content-center bg-light rounded-circle text-primary fw-bold shadow-sm" style="width: 80px; height: 80px; font-size: 2rem;">
                        @Model.Nombre.Substring(0, 1)@Model.Apellido.Substring(0, 1)
                    </div>
                </div>
                <h2 class="fw-bold mb-0">@Model.Nombre @Model.Apellido</h2>
                <p class="text-muted">DNI: @Model.Dni</p>

                @if (ViewBag.Estado == "Activo")
                {
                    <div class="alert alert-success d-inline-block px-4 py-2 rounded-pill fw-bold mb-0">
                        <i class="bi bi-check-circle-fill me-2"></i> MEMBRESÍA ACTIVA
                    </div>
                    <p class="mt-3 text-muted small">
                        Vence el <b>@ViewBag.Vencimiento</b> (Quedan @ViewBag.DiasRestantes días)
                    </p>
                }
                else
                {
                    <div class="alert alert-danger d-inline-block px-4 py-2 rounded-pill fw-bold mb-0">
                        <i class="bi bi-exclamation-circle-fill me-2"></i> MEMBRESÍA VENCIDA
                    </div>
                    <p class="mt-3 text-muted small">Tu acceso está bloqueado.</p>
                }
            </div>
        </div>

        <div class="d-grid gap-3">
            <a asp-action="Renovar" class="btn btn-success btn-lg py-4 shadow fw-bold text-uppercase fs-5">
                <i class="bi bi-credit-card-2-front-fill me-2"></i>
                @(ViewBag.Estado == "Activo" ? "Extender / Renovar" : "Renovar Ahora")
            </a>

            <button class="btn btn-outline-secondary py-3" onclick="alert('Muestra este código en recepción para ingresar.')">
                <i class="bi bi-qr-code me-2"></i> Ver mi Código QR
            </button>
        </div>

        <h6 class="text-muted fw-bold mt-5 mb-3 ps-2">TUS ÚLTIMAS MEMBRESÍAS</h6>
        <div class="list-group shadow-sm rounded-3 border-0">
            @foreach (var m in Model.Membresias.OrderByDescending(x => x.FechaFin).Take(3))
            {
                <div class="list-group-item border-0 border-bottom py-3">
                    <div class="d-flex w-100 justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0 fw-bold">@(m.TipoMembresia?.Nombre ?? "Plan Desconocido")</h6>
                            <small class="text-muted">Hasta @m.FechaFin.ToString("dd/MM/yyyy")</small>
                        </div>
                        <span class="badge @(m.Activa ? "bg-success" : "bg-secondary") rounded-pill">
                            @(m.Activa ? "Activa" : "Cerrada")
                        </span>
                    </div>
                </div>
            }
        </div>

    </div>
</body>
</html>