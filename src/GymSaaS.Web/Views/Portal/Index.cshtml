@model GymSaaS.Domain.Entities.Socio
@{
    Layout = null;
    ViewData["Title"] = "Mi Perfil";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/gymvo-cyberpunk.css" asp-append-version="true" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>

    <style>
        body {
            background-color: #050505;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .app-header {
            padding: 2rem 1.5rem;
            background: linear-gradient(180deg, rgba(0,243,255,0.05) 0%, transparent 100%);
        }

        .menu-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            padding: 1.5rem;
        }

        .menu-card {
            background: rgba(20, 20, 25, 0.6);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.05);
            border-radius: 24px;
            padding: 1.5rem;
            text-align: center;
            text-decoration: none;
            color: white;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            aspect-ratio: 1/1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

            .menu-card:active {
                transform: scale(0.95);
                background: rgba(0, 243, 255, 0.1);
                border-color: rgba(0, 243, 255, 0.3);
            }

        .menu-icon {
            font-size: 2rem;
            margin-bottom: 0.5rem;
            color: var(--md-sys-color-primary);
            filter: drop-shadow(0 0 10px rgba(0, 243, 255, 0.4));
        }
    </style>
</head>
<body>

    <div class="app-header">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="brand-font text-white m-0" style="font-size: 1.75rem;">HOLA,</h1>
                <h2 class="brand-font text-info m-0" style="font-size: 2rem; text-transform: uppercase;">
                    @Context.Session.GetString("SocioNombre")?.Split(' ')[0]
                </h2>
            </div>
            <div class="rounded-circle border border-secondary p-1">
                <img src="https://via.placeholder.com/48" class="rounded-circle" width="48" height="48" alt="User">
            </div>
        </div>

        <div class="glass-panel p-3 d-flex align-items-center justify-content-between">
            <div>
                <small class="text-secondary text-uppercase" style="font-size: 0.7rem;">Estado Actual</small>
                <div class="d-flex align-items-center mt-1">
                    <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3 py-2 rounded-pill">
                        <i class="bi bi-check-circle-fill me-1"></i> ACTIVO
                    </span>
                </div>
            </div>
            <div class="text-end">
                <small class="text-secondary text-uppercase" style="font-size: 0.7rem;">Vencimiento</small>
                <div class="text-white fw-bold font-monospace mt-1">
                    -- / --
                </div>
            </div>
        </div>
    </div>

    <div class="menu-grid">
        <a asp-action="Acceso" class="menu-card">
            <i class="bi bi-qr-code-scan menu-icon"></i>
            <span class="fw-bold small">MI ACCESO</span>
        </a>

        <a asp-action="Clases" class="menu-card">
            <i class="bi bi-calendar-check menu-icon text-warning"></i>
            <span class="fw-bold small">RESERVAR</span>
        </a>

        <a asp-action="Renovar" class="menu-card" style="border-color: rgba(0, 255, 0, 0.2);">
            <i class="bi bi-credit-card-2-front menu-icon text-success"></i>
            <span class="fw-bold small">RENOVAR</span>
        </a>

        <a asp-action="Logout" class="menu-card">
            <i class="bi bi-box-arrow-right menu-icon text-danger" style="filter: drop-shadow(0 0 5px rgba(255, 0, 0, 0.4));"></i>
            <span class="fw-bold small">SALIR</span>
        </a>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>