@{
    Layout = null;
    ViewData["Title"] = "Acceso Socios";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/gymvo-cyberpunk.css" asp-append-version="true" />

    <style>
        body {
            background-color: #050505;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 20px;
        }

        .mobile-frame {
            width: 100%;
            max-width: 400px;
        }
    </style>
</head>
<body>

    <div class="mobile-frame fade-in-up">

        <div class="text-center mb-5">
            <div class="rounded-circle bg-dark border border-info d-inline-flex align-items-center justify-content-center mb-3"
                 style="width: 80px; height: 80px; box-shadow: 0 0 20px rgba(0, 243, 255, 0.3);">
                <i class="bi bi-person-bounding-box text-info fs-1"></i>
            </div>
            <h2 class="brand-font text-white mb-1">SOY SOCIO</h2>
            <p class="text-secondary small">Gestiona tu pase y membresía</p>
        </div>

        <div class="glass-panel p-4">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger bg-danger bg-opacity-10 border-danger text-danger rounded-3 mb-4 small text-center">
                    <i class="bi bi-exclamation-triangle-fill me-1"></i> @ViewBag.Error
                </div>
            }

            <form asp-action="Login" method="post">
                <div class="mb-4">
                    <label class="form-label text-secondary small text-uppercase fw-bold text-center w-100 mb-3">Ingresa tu DNI</label>

                    <div class="position-relative">
                        <input type="tel" name="dni"
                               class="form-control form-control-lg bg-dark border-secondary text-white text-center fs-2 brand-font py-3"
                               placeholder="00000000" required autocomplete="off" autofocus
                               style="letter-spacing: 2px;" inputmode="numeric" pattern="[0-9]*">

                        <i class="bi bi-card-heading position-absolute top-50 translate-middle-y text-secondary opacity-50 fs-4"
                           style="right: 15px;"></i>
                    </div>
                </div>

                <div class="d-grid mt-5">
                    <button type="submit" class="btn-md3 btn-md3-primary py-3 fs-5">
                        INGRESAR <i class="bi bi-arrow-right-short fs-4 align-middle ms-1"></i>
                    </button>
                </div>
            </form>
        </div>

        <div class="text-center mt-5">
            <a href="/" class="text-secondary text-decoration-none small opacity-50">
                &copy; @DateTime.Now.Year Gymvo Systems
            </a>
        </div>
    </div>

</body>
</html>