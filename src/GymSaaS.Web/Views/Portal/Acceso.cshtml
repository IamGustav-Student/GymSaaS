@model GymSaaS.Domain.Entities.Socio

@{
    Layout = null; // Sin Layout para que parezca una App nativa/Modal
    ViewData["Title"] = "Mi Pase de Acceso";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/gymvo-cyberpunk.css" asp-append-version="true" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>

    <style>
        body {
            background-color: #000;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
            font-family: 'Rajdhani', sans-serif; /* Asegurando la fuente brand */
        }

        .access-card {
            background: linear-gradient(145deg, #1a1a1a, #0d0d0d);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 2rem;
            width: 100%;
            max-width: 350px;
            position: relative;
            box-shadow: 0 0 30px rgba(0, 243, 255, 0.15);
            overflow: hidden;
        }

            /* Efecto de luz superior */
            .access-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 4px;
                background: var(--md-sys-color-primary);
                box-shadow: 0 0 15px var(--md-sys-color-primary);
            }

        .qr-container {
            background: #fff;
            padding: 15px;
            border-radius: 12px;
            display: inline-block;
            margin: 20px 0;
            position: relative;
        }

        /* Esquinas tecnológicas del QR */
        .qr-frame {
            position: absolute;
            width: 20px;
            height: 20px;
            border: 2px solid var(--md-sys-color-primary);
            transition: all 0.3s ease;
        }

        .tl {
            top: -5px;
            left: -5px;
            border-right: none;
            border-bottom: none;
        }

        .tr {
            top: -5px;
            right: -5px;
            border-left: none;
            border-bottom: none;
        }

        .bl {
            bottom: -5px;
            left: -5px;
            border-right: none;
            border-top: none;
        }

        .br {
            bottom: -5px;
            right: -5px;
            border-left: none;
            border-top: none;
        }

        .status-badge {
            background: rgba(0, 255, 136, 0.1);
            color: #00ff88;
            border: 1px solid rgba(0, 255, 136, 0.3);
            padding: 5px 15px;
            border-radius: 50px;
            font-size: 0.8rem;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        .status-inactive {
            background: rgba(255, 50, 50, 0.1);
            color: #ff3232;
            border: 1px solid rgba(255, 50, 50, 0.3);
        }

        .btn-close-custom {
            position: absolute;
            top: 15px;
            right: 15px;
            color: white;
            font-size: 1.2rem;
            opacity: 0.5;
            transition: opacity 0.3s;
        }

            .btn-close-custom:hover {
                opacity: 1;
            }
    </style>
</head>
<body>

    <div class="access-card text-center">
        <a asp-action="Index" class="btn-close-custom">
            <i class="bi bi-x-lg"></i>
        </a>

        <div class="mb-3">
            <h6 class="text-secondary text-uppercase small" style="letter-spacing: 2px;">Gymvo Access</h6>
            <h3 class="text-white fw-bold m-0">@Model.Nombre @Model.Apellido</h3>
            <p class="text-info small mb-0 opacity-75">Socio ID: @Model.Id.ToString("D6")</p>
        </div>

        <div class="mb-2">
            @if (Model.Activo)
            {
                <span class="status-badge"><i class="bi bi-shield-check me-1"></i> Activo</span>
            }
            else
            {
                <span class="status-badge status-inactive"><i class="bi bi-shield-x me-1"></i> Inactivo</span>
            }
        </div>

        <div class="position-relative d-inline-block">
            <div class="qr-container">
                <div id="qrcode"></div>
            </div>

            <div class="qr-frame tl"></div>
            <div class="qr-frame tr"></div>
            <div class="qr-frame bl"></div>
            <div class="qr-frame br"></div>
        </div>

        <div class="mt-3">
            <p class="text-secondary small mb-1" style="font-size: 0.75rem;">Escanea este código en el molinete de entrada</p>
            <div class="text-white-50 font-monospace small" style="font-size: 0.65rem;">
                SECURE TOKEN: @Guid.NewGuid().ToString().Substring(0, 8).ToUpper()
            </div>
        </div>
    </div>

    <script>
        window.addEventListener('load', function() {
            var qrcode = new QRCode(document.getElementById("qrcode"), {
                text: "@Model.CodigoAcceso",
                width: 180,
                height: 180,
                colorDark : "#000000",
                colorLight : "#ffffff",
                correctLevel : QRCode.CorrectLevel.H
            });
        });
    </script>
</body>
</html>