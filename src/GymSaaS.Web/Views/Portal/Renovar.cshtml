@* CAMBIO CLAVE: Ahora aceptamos la Entidad directa, no el DTO *@
@model IEnumerable<GymSaaS.Domain.Entities.TipoMembresia>

@{
    Layout = null;
    ViewData["Title"] = "Renovar Pase";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/gymvo-cyberpunk.css" asp-append-version="true" />

    <style>
        body {
            background-color: #050505;
            min-height: 100vh;
            padding-bottom: 40px;
        }

        .header-nav {
            padding: 1.5rem;
            display: flex;
            align-items: center;
            background: linear-gradient(180deg, rgba(0,0,0,0.8) 0%, transparent 100%);
            position: sticky;
            top: 0;
            z-index: 100;
            backdrop-filter: blur(5px);
        }

        .plan-card {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .plan-card:hover, .plan-card:active {
                border-color: var(--md-sys-color-primary);
                background: rgba(0, 243, 255, 0.05);
                transform: scale(1.02);
            }

        .price-tag {
            font-size: 2rem;
            font-weight: bold;
            color: white;
            font-family: 'Orbitron', sans-serif;
        }
    </style>
</head>
<body>

    <div class="header-nav">
        <a asp-action="Index" class="btn btn-sm btn-outline-light rounded-circle me-3"
           style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;">
            <i class="bi bi-arrow-left"></i>
        </a>
        <h4 class="brand-font text-white m-0">Elegí tu Plan</h4>
    </div>

    <div class="container px-3">

        <p class="text-secondary small mb-4 px-2">Selecciona un plan para renovar tu acceso inmediatamente.</p>

        @if (Model != null && Model.Any())
        {
            @foreach (var plan in Model)
            {
                <div class="plan-card">
                    <div style="position: absolute; top: -20px; right: -20px; width: 80px; height: 80px; background: var(--md-sys-color-tertiary); filter: blur(40px); opacity: 0.2;"></div>

                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h3 class="text-white brand-font h4 mb-0">@plan.Nombre</h3>
                        <span class="badge bg-dark border border-secondary text-secondary">@plan.DuracionDias Días</span>
                    </div>

                    <div class="mb-3">
                        @if (plan.CantidadClases.HasValue)
                        {
                            <small class="text-info"><i class="bi bi-lightning-fill"></i> @plan.CantidadClases Clases</small>
                        }
                        else
                        {
                            <small class="text-warning"><i class="bi bi-infinity"></i> Pase Libre</small>
                        }
                    </div>

                    <div class="d-flex justify-content-between align-items-end border-top border-secondary border-opacity-25 pt-3">
                        <div>
                            <small class="text-secondary text-uppercase d-block" style="font-size: 0.7rem;">Precio Final</small>
                            <span class="price-tag text-white">$@plan.Precio.ToString("N0")</span>
                        </div>

                        <form asp-controller="Membresias" asp-action="LinkPago" method="post">
                            <input type="hidden" name="planId" value="@plan.Id" />
                            <button type="submit" class="btn-md3 btn-md3-primary py-2 px-4 shadow-sm">
                                ELEGIR <i class="bi bi-chevron-right small"></i>
                            </button>
                        </form>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="glass-panel text-center py-5 mt-4">
                <i class="bi bi-emoji-frown text-secondary fs-1 d-block mb-3"></i>
                <h5 class="text-white">No hay planes disponibles</h5>
                <p class="text-secondary small">Contacta a la administración para renovar.</p>
                <a asp-action="Index" class="btn btn-outline-light btn-sm mt-3">Volver al Inicio</a>
            </div>
        }

    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>