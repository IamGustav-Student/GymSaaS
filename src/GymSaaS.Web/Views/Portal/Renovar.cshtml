@model List<GymSaaS.Application.Membresias.Queries.GetTiposMembresia.TipoMembresiaDto>

@{
    Layout = null;
    ViewData["Title"] = "Renovar Membresía";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/gymvo-cyberpunk.css" asp-append-version="true" />

    <style>
        body {
            background-color: #050505;
            min-height: 100vh;
            padding-bottom: 40px;
        }

        .header-nav {
            padding: 1.5rem;
            display: flex;
            align-items: center;
            background: linear-gradient(180deg, rgba(0,0,0,0.8) 0%, transparent 100%);
            position: sticky;
            top: 0;
            z-index: 100;
            backdrop-filter: blur(10px);
        }
    </style>
</head>
<body>

    <div class="header-nav">
        <a asp-action="Index" class="btn btn-outline-secondary rounded-circle border-0 bg-dark bg-opacity-50 text-white me-3" style="width: 45px; height: 45px; display: flex; align-items: center; justify-content: center;">
            <i class="bi bi-arrow-left fs-5"></i>
        </a>
        <div>
            <h4 class="brand-font text-white m-0" style="letter-spacing: 1px;">PLANES DISPONIBLES</h4>
            <p class="text-secondary small m-0">Elige tu próxima suscripción</p>
        </div>
    </div>

    <div class="container px-4">

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger bg-danger bg-opacity-10 border-danger text-danger rounded-4 mb-4">
                <i class="bi bi-exclamation-circle me-2"></i> @TempData["Error"]
            </div>
        }

        @if (Model != null && Model.Any())
        {
            @foreach (var plan in Model)
            {
                <div class="glass-panel p-4 mb-3 position-relative overflow-hidden">
                    <div style="position: absolute; top: 0; left: 0; width: 4px; height: 100%; background: var(--md-sys-color-primary);"></div>
                    <div style="position: absolute; top: -20px; right: -20px; width: 100px; height: 100px; background: var(--md-sys-color-primary); filter: blur(50px); opacity: 0.15;"></div>

                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h3 class="text-white brand-font mb-0">@plan.Nombre</h3>
                        <span class="badge bg-dark border border-secondary text-info rounded-pill">
                            @plan.DuracionDias días
                        </span>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex gap-1 mb-2">
                            @{
                                var dias = new[] {
                                        new { L = "L", V = plan.AccesoLunes },
                                        new { L = "M", V = plan.AccesoMartes },
                                        new { L = "X", V = plan.AccesoMiercoles },
                                        new { L = "J", V = plan.AccesoJueves },
                                        new { L = "V", V = plan.AccesoViernes },
                                        new { L = "S", V = plan.AccesoSabado },
                                        new { L = "D", V = plan.AccesoDomingo },
                                        };
                            }
                            @foreach (var d in dias)
                            {
                                if (d.V)
                                {
                                    <small class="text-info fw-bold me-1">@d.L</small>
                                }
                                else
                                {
                                    <small class="text-secondary opacity-25 me-1">@d.L</small>
                                }
                            }
                        </div>

                        @if (plan.CantidadClases.HasValue)
                        {
                            <div class="d-flex align-items-center text-secondary small">
                                <i class="bi bi-lightning-fill text-warning me-2"></i> @plan.CantidadClases Clases Incluidas
                            </div>
                        }
                        else
                        {
                            <div class="d-flex align-items-center text-secondary small">
                                <i class="bi bi-infinity text-success me-2"></i> Pase Libre
                            </div>
                        }
                    </div>

                    <div class="d-flex justify-content-between align-items-end border-top border-secondary border-opacity-25 pt-3">
                        <div>
                            <small class="text-secondary text-uppercase d-block" style="font-size: 0.7rem;">Precio Final</small>
                            <span class="fs-2 brand-font text-white">$@plan.Precio.ToString("N0")</span>
                        </div>

                        <form asp-action="Contratar" method="post">
                            <input type="hidden" name="tipoMembresiaId" value="@plan.Id" />
                            <button type="submit" class="btn-md3 btn-md3-primary py-2 px-4 shadow-sm">
                                CONTRATAR <i class="bi bi-chevron-right small"></i>
                            </button>
                        </form>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="glass-panel text-center py-5 mt-4">
                <i class="bi bi-emoji-frown text-secondary fs-1 d-block mb-3"></i>
                <h5 class="text-white">No hay planes disponibles</h5>
                <p class="text-secondary small">Contacta a la administración para renovar.</p>
                <a asp-action="Index" class="btn btn-outline-light btn-sm mt-3">Volver al Inicio</a>
            </div>
        }

    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>