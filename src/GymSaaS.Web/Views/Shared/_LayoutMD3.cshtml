<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gymvo OS</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/gymvo-cyberpunk.css" asp-append-version="true" />
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <input type="hidden" id="meta-tenant-id" value="@Context.Items["CurrentTenant"]?.GetType().GetProperty("Id")?.GetValue(Context.Items["CurrentTenant"], null)" />
    }

    <div class="app-layout">
        <nav class="md3-sidebar">
            <div class="sidebar-header">
                <i class="bi bi-cpu-fill text-info fs-2" style="filter: drop-shadow(0 0 5px cyan);"></i>
                <span class="brand-font fs-4 text-white">GYMVO</span>
            </div>

            <ul class="nav-list">
                <li class="nav-item">
                    <a class="nav-link-md3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")"
                       asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-grid-fill"></i> <span>Dashboard</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link-md3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Clases" ? "active" : "")"
                       asp-controller="Clases" asp-action="Index">
                        <i class="bi bi-calendar2-week-fill"></i> <span>Clases</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link-md3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Ejercicios" ? "active" : "")"
                       asp-controller="Ejercicios" asp-action="Index">
                        <i class="bi bi-collection-play-fill"></i> <span>Ejercicios</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link-md3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Rutinas" ? "active" : "")"
                       asp-controller="Rutinas" asp-action="Index">
                        <i class="bi bi-journal-medical"></i> <span>Rutinas</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link-md3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Membresias" ? "active" : "")"
                       asp-controller="Membresias" asp-action="Index">
                        <i class="bi bi-star-fill text-warning"></i> <span>Membresías</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link-md3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Socios" ? "active" : "")"
                       asp-controller="Socios" asp-action="Index">
                        <i class="bi bi-people-fill"></i> <span>Socios</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link-md3 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Pagos" ? "active" : "")"
                       asp-controller="Configuracion" asp-action="Pagos">
                        <i class="bi bi-wallet-fill"></i> <span>Configuracion</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link-md3 position-relative" href="#">
                        <i class="bi bi-bell-fill"></i>
                        <span>Notificaciones</span>
                        <span class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-dark rounded-circle" style="left: 20px !important; top: 10px !important;">
                            <span class="visually-hidden">New alerts</span>
                        </span>
                    </a>
                </li>

                <li class="nav-item mb-4">
                    <form asp-controller="Auth" asp-action="Logout" method="post" id="logoutFormSidebar">
                        <a href="#" class="nav-link-md3 text-danger-hover" onclick="document.getElementById('logoutFormSidebar').submit(); return false;">
                            <i class="bi bi-box-arrow-right text-danger"></i>
                            <span class="text-danger">Cerrar Sesión</span>
                        </a>
                    </form>
                </li>

            </ul>
        </nav>

        <main class="md3-main">
            <header class="md3-topbar">
                <h2 class="brand-font m-0 text-white">@ViewData["Title"]</h2>
            </header>

            <div class="content-container">
                @RenderBody()
            </div>
        </main>
    </div>

    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999;">
        <div id="liveToastAcceso" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true"
             style="background: rgba(20, 20, 30, 0.95); backdrop-filter: blur(10px); border: 1px solid var(--md-sys-color-primary); color: white;">
            <div class="toast-header border-bottom border-secondary border-opacity-50"
                 style="background: rgba(0, 243, 255, 0.1); color: white;">
                <i class="bi bi-person-check-fill me-2 text-info"></i>
                <strong class="me-auto" id="toastAccesoTitulo">Acceso Detectado</strong>
                <small class="text-info">Ahora</small>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body d-flex align-items-center">
                <img id="toastAccesoFoto" src="" class="rounded-circle me-3 border border-info" width="50" height="50" style="object-fit:cover;" />
                <div>
                    <h6 class="mb-0 fw-bold brand-font" id="toastAccesoMensaje" style="letter-spacing: 1px;">Bienvenido</h6>
                    <small class="text-white-50" style="font-size: 0.8rem;">Verificación GPS Exitosa</small>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script src="~/js/gymvo-access-monitor.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>